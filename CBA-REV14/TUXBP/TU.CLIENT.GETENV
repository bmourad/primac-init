***************************************************************************
*-* TU.CLIENT.GETENV(Environment Variable, Return String)
*-*
*-* This function will return the contents of the specified Environment
*-* variable in Return String. If the call fails then an empty string is
*-* returned.
*-*
*-* [P] Env      The Environment Variable to query.
*-* [R] Rtn.Str  String to contain the results.
***************************************************************************
*
 INCLUDE TUBP USER.INCLUDE.H
 INCLUDE TUBP TU.API.H
 INCLUDE TUBP SPECIAL.H
 INCLUDE TUBP OS.DELAY.H
*
PROMPT ""
RTN.STR = ""; MORE = 0
 INCLUDE TUBP ECHO.OFF.H
CRT TU.GETENV:ENV:TU.TAIL:
*
FOR SLEEP.LOOP = 1 TO 2 UNTIL MORE
 INCLUDE TUBP INPUT.MORE
IF MORE THEN INPUT RTN.STR: ; !*-GA*!
!@!IF MORE THEN GET RTN.STR FROM PORTNO UNTIL CR ; !*GA*!
SLEEP SLEEP.LOOP
NEXT SLEEP.LOOP
*
 INCLUDE TUBP ECHO.ON.H
IF NOT(MORE) THEN RTN.STR = ""
RETURN
END
