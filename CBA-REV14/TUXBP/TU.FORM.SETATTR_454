*************************************************************************
* DESCRIPTION : Set attributes of fields in a form
* PASSED      : FIELDNAMES - multi-attributed list of field names to set
*               ATTRS      - list of attributes to set for EACH of the fields
*               VALUES     - corresponding values to set
* RETURNED    : ERROR      - 0:no error  else error
*************************************************************************
*
 INCLUDE TUBP TU.API.H
 INCLUDE TUBP SPECIAL.H
 INCLUDE TUBP ROC.H
 INCLUDE TUBP USER.INCLUDE.H
*
FLDNAMES = FIELDNAMES
CALL TU.CONVERT_454(AM, VM, FLDNAMES)
ATTS = ATTRS
CALL TU.CONVERT_454(",":VM:AM, SVM:SVM:VM, ATTS)
VALS = VALUES
CALL TU.CONVERT_454(SVM:VM:AM, "~":SVM:VM, VALS)
*
CALL ROC.SET_454("roc", SET.FIELDATTR, FLDNAMES:AM:ATTS:AM:VALS, ERROR)
RETURN
END
