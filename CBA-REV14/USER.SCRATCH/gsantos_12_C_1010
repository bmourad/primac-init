INV.STAT.REC.SIZE = 15
$IFNDEF INVSTATS
DIM INV.STAT.REC(15)
$ENDIF
EQU ISTAT.PO TO INV.STAT.REC(1)
EQU ISTAT.PO.VEND TO INV.STAT.REC(2)
EQU ISTAT.PO.DATE TO INV.STAT.REC(3)
EQU ISTAT.PO.QTY TO INV.STAT.REC(4)
EQU ISTAT.PO.JOB TO INV.STAT.REC(5)
EQU ISTAT.PO.JOB.QTY TO INV.STAT.REC(6)
EQU ISTAT.PO.JOB.AMT TO INV.STAT.REC(7)
EQU ISTAT.JOB TO INV.STAT.REC(8)
