      IF SEQ <> 0 AND GLM.P.DATE = "" THEN
         G.DATE = OCONV(GLM.DATE,"D2/")"R#8"
         SR = GLM.SRC"L#2"
         REF.NO = GLM.REF "L#8"
         IF GLM.AMT > 0 THEN
            DEBIT = OCONV(GLM.AMT,"MD2Z,")"R#13"
            CREDIT = SPACE(13)
         END ELSE
            CREDIT = OCONV((GLM.AMT * (-1)),"MD2Z,")"R#13"
            DEBIT = SPACE(13)
         END
         IF LEN(GLM.DESC) > 35 THEN
            PRINT GLM.DESC "R#51" :
         END ELSE
            PRINT SPACE(16) : GLM.DESC "L#35" :
         END
         PRINT SP1:G.DATE:SP1:SR:SP1:REF.NO:SPACE(17):DEBIT:SP1:CREDIT
         LINE.CNT = LINE.CNT + 1
         IF LINE.CNT >= 55 THEN GOSUB 20;PRINT;LINE.CNT = LINE.CNT + 1
      END
   REPEAT
   PRINT SLINE
   PRINTER OFF
   GOTO 99999
