20*
   PRINT CHAR(12)
   PRINT
   PG.NO = PG.NO + 1
   PRINT HD1:PG.NO
   PRINT HD2
   PRINT SPACE(67) : "FOR PERIOD " : PERIOD
   PRINT
   PRINT " ACCT/DV/DP/CTR":SPACE(13):"DESCRIPTION":SPACE(15):"DATE   SR  REFER#    OPEN BALANCE      DEBIT        CREDIT      ENDING BALANCE"
   PRINT DSH15:SP1:DSH35:SP1:DSH8:SP1:DSH2:SP1:DSH8:SP1:DSH15:SP1:DSH13:SP1:DSH13:SP1:DSH15
   PRINT
   LINE.CNT = 7
   HEAD.FLG = 1
   RETURN
