SUBROUTINE WIN.MENUATT(MENU, SUBMENU, TITLE, POS)
* Attach a windows menu to main
* Compile for: GENERIC AP MD ME PI.SUB PR.SUB SQ UD UL UP UV UC IN GA
* (C) Copyright IBM Corporation 2003. All rights reserved
* Copyright (c) 1991-93. Impact Business Systems
*
IF MENU='' THEN MENU = 'MainMenu'
SCRIPT = 'If Not(IsOnMenu(':MENU:',"':SUBMENU:'")) Then Menu Attach ':MENU:',':SUBMENU:',"':TITLE:'","':POS:'"'
SCRIPT<-1>='Menu Enable ':MENU:',"':SUBMENU:'",0'
CALL WIN.HSCRIPT(SCRIPT)
*
RETURN
*
END
