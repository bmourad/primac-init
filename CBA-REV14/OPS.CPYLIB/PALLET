****************************
*  REVISION  - [08.X]      *
*  PALLET FILE DEFINITION  *
*  KEY = CONO:PALLET#      *
****************************
      PLRS.REC.SIZE = 45
      DIM PLRS.REC(45)
      EQU PLRS.JOB       TO PLRS.REC(1)   ;* Job # 
      EQU PLRS.CUST      TO PLRS.REC(2)   ;* Customer #
      EQU PLRS.PROD      TO PLRS.REC(3)   ;* Product #
      EQU PLRS.WHSE      TO PLRS.REC(4)   ;* Warehouse #
      EQU PLRS.FI.NO     TO PLRS.REC(5)   ;* Fifo reference #
*                                         ;* (MV3) If not palletized
      EQU PLRS.ORDER     TO PLRS.REC(6)   ;* Order # (null if non-spec)
*                                         ;* (MV3) If not palletized
      EQU PLRS.LOC       TO PLRS.REC(7)   ;* Location #
      EQU PLRS.GRS.WT    TO PLRS.REC(8)   ;* Gross weight
      EQU PLRS.NET.WT    TO PLRS.REC(9)   ;* Net weight
      EQU PLRS.TARE      TO PLRS.REC(10)  ;* Tare weight
      EQU PLRS.RS.CNT    TO PLRS.REC(11)  ;* (MV1) # of Rolls/Crtns
      EQU PLRS.LEN       TO PLRS.REC(12)  ;* (MV1) Length
      EQU PLRS.QTY       TO PLRS.REC(13)  ;* (MV1) Quantity
      EQU PLRS.SQTY      TO PLRS.REC(14)  ;* (MV1) Quantity
      EQU PLRS.UN.COST   TO PLRS.REC(15)  ;* Unit Cost (MD3)
      EQU PLRS.UN.SALE   TO PLRS.REC(16)  ;* Unit Sale (MD3)
*                                         ;* (MV3) If not palletized
      EQU PLRS.REC.DATE  TO PLRS.REC(17)  ;* Receiving date
      EQU PLRS.SHIP.TO   TO PLRS.REC(18)  ;* Ship To if any
*                                         ;* (MV3) If not palletized
      EQU PLRS.YIELD     TO PLRS.REC(19)  ;* Quantity / Weight conversion factor
      EQU PLRS.BOL       TO PLRS.REC(20)  ;* Bill of Lading number
      EQU PLRS.COST.PCT  TO PLRS.REC(21)  ;* Cost / Sale Percentage
      EQU PLRS.RELNO     TO PLRS.REC(22)  ;* Release #
*
      EQU PLRS.PRT.DATE  TO PLRS.REC(24)  ;* Label print date
      EQU PLRS.STATUS    TO PLRS.REC(25)  ;* (MV2) Posting status (WIP,FNGD,SHIP,INV)
      EQU PLRS.PICK.FLG  TO PLRS.REC(26)  ;* Print Pick Ticket (Y/N)
*                                         ;* (MV3) If not palletized
      EQU PLRS.PERIOD    TO PLRS.REC(27)  ;* Receipt Period
      EQU PLRS.STAT.DATE TO PLRS.REC(28)  ;* (MV2) Status Date
      EQU PLRS.STAT.PER  TO PLRS.REC(29)  ;* (MV2) Status Period
      EQU PLRS.TOT.QTY   TO PLRS.REC(30)  ;* Total Quantity
      EQU PLRS.TOT.SQTY  TO PLRS.REC(31)  ;* Total Stock Quantity
      EQU PLRS.TOT.AMT   TO PLRS.REC(32)  ;* Total Sale Amount
      EQU PLRS.TOT.COST  TO PLRS.REC(33)  ;* Total Cost Amount
      EQU PLRS.EX.CODE   TO PLRS.REC(34)  ;* Currency conversion code
*                                         ;* (MV3) If not palletized
      EQU PLRS.EX.RATE   TO PLRS.REC(35)  ;* Exchange rate (6 assumed decimals)
*                                         ;* (MV3) If not palletized
      EQU PLRS.EX.COST   TO PLRS.REC(36)  ;* Customer's currency unit cost
      EQU PLRS.EX.SALE   TO PLRS.REC(37)  ;* Customer's currency unit sale
*                                         ;* (MV3) If not palletized
      EQU PLRS.TRAN.SEQ  TO PLRS.REC(38)  ;* (MV4) Transfer seq numbers
      EQU PLRS.TRAN.AMT  TO PLRS.REC(39)  ;* (MV4) Transfered qty
      EQU PLRS.ORIG.WHSE TO PLRS.REC(40)  ;* Warehouse orginally received
      EQU PLRS.GLA.DATE  TO PLRS.REC(41)
