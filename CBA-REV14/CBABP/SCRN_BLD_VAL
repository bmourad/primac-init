      SUBROUTINE SCRN_BLD_VAL (FDEF, SCRN_VTYP, SCRN_TBAR, ERRORS)
*
*COPY>CPYLIB>CHAR
*COPY>CPYLIB>ALT.BUILD.SCREEN
      ALL.VAL = "A":VM: "C":VM:     "D":VM:     "I":VM:     "S":VM:     "SF":VM:"SR":VM:        "ST":VM:        "SB":VM:        "F":VM:   "E":VM:   "N"
      ALL.TYP = "ADD":VM:"CHANGE":VM:"DELETE":VM:"INSERT":VM:"SCROLL":VM:"" :VM:"SCROLL REV":VM:"SCROLL TOP":VM:"SCROLL BOT":VM:"FILE":VM:"EXIT":VM:"NEXT SCREEN"
      STD_PMSG = "ENTER # TO CHANGE, (F)ILE OR (E)XIT"
      STD_VAL = "F,E"
      STD_TBAR = "MAINF"
      STD_VTYP = "SAVE":VM:"EXIT"
*
      STD_PMSG<2> = "ENTER (A)DD, (C)HANGE, (D)ELETE, (S)CROLL OR (E)ND"
      STD_VAL<2> = "A,C,D,S,E"
      STD_TBAR<2> = "SCROLLM1"
      STD_VTYP<2> = "ADD":VM:"CHANGE":VM:"DELETE":VM:"SCROLL":VM:"EXIT"
*
      STD_PMSG<3> = "ENTER (A)DD, (C)HANGE, (D)ELETE, (S)CROLL OR (E)XIT"
      STD_VAL<3> = "A,C,D,S,E"
      STD_TBAR<3> = "SCROLLM1"
      STD_VTYP<3> = "ADD":VM:"CHANGE":VM:"DELETE":VM:"SCROLL":VM:"EXIT"
*
      STD_PMSG<4> = "ENTER (A)DD, (C)HANGE, (D)ELETE, (S)CROLL OR <RETURN>"
      STD_VAL<4> = "A,C,D,S"
      STD_TBAR<4> = "SCROLLM1"
      STD_VTYP<4> = "ADD":VM:"CHANGE":VM:"DELETE":VM:"SCROLL"
*
      STD_PMSG<5> = "ENTER (A)DD, (C)HANGE, (D)ELETE, (I)NSERT, (S)CROLL OR (E)ND"
      STD_VAL<5> = "A,C,D,I,S,E"
      STD_TBAR<5> = "SCROLLI1"
      STD_VTYP<5> = "ADD":VM:"CHANGE":VM:"DELETE":VM:"INSERT":VM:"SCROLL":VM:"EXIT"
*
      STD_PMSG<6> = "ENTER (A)DD, (C)HANGE, (D)ELETE, (I)NSERT, (S)CROLL OR (E)XIT"
      STD_VAL<6> = "A,C,D,I,S,E"
      STD_TBAR<6> = "SCROLLI1"
      STD_VTYP<6> = "ADD":VM:"CHANGE":VM:"DELETE":VM:"INSERT":VM:"SCROLL":VM:"EXIT"
*
      STD_PMSG<7> = "ENTER (A)DD, (C)HANGE, (D)ELETE, (I)NSERT, (S)CROLL OR <RETURN>"
      STD_VAL<7> = "A,C,D,I,S"
      STD_TBAR<7> = "SCROLLI1"
      STD_VTYP<7> = "ADD":VM:"CHANGE":VM:"DELETE":VM:"INSERT":VM:"SCROLL"
*
      STD_PMSG<8> = "ENTER # TO CHANGE, (N)EXT, (F)ILE OR (E)XIT"
      STD_VAL<8> = "N,F,E"
      STD_VTYP<8> = "NEXT SCREEN":VM:"FILE":VM:"EXIT"
*
      STD_PMSG<9> = "ENTER (S)CROLL OR (E)ND"
      STD_VAL<9> = "S,E"
      STD_TBAR<9> = "SCROLL1"
      STD_VTYP<9> = "SCROLL":VM:"EXIT"
*
      STD_PMSG<10> = "ENTER (S)CROLL OR <RETURN>"
      STD_VAL<10> = "S"
      STD_TBAR<10> = "SCROLL1"
      STD_VTYP<10> = "SCROLL"
*
      STD_PMSG<11> = "ENTER LINE NUMBER TO CHANGE, (F)ILE OR (E)XIT"
      STD_VAL<11> = "F,E"
      STD_TBAR<11> = "MAINF"
      STD_VTYP<11> = "SAVE":VM:"EXIT"
*
      STD_PMSG<12> = "ENTER LINE NUMBER TO CHANGE, (F)ILE, (E)XIT"
      STD_VAL<12> = "F,E"
      STD_TBAR<12> = "MAINF"
      STD_VTYP<12> = "SAVE":VM:"EXIT"
*
      STD_CNT = DCOUNT(STD_PMSG,AM)
      FOR II = 1 TO STD_CNT
         STD_PMSG<II> = OCONV(TRIM(STD_PMSG<II>),"MCU")
      NEXT II
*---- CHECK FOR STANDARD MESSAGES
      PMSG = FDEF<1,B.PMSG>
      PMSG = FIELD(PMSG,":",1)    ;* ELIMINATING ":"
      PMSG = OCONV(TRIM(PMSG),"MCU")
      LOCATE PMSG IN STD_PMSG, 1 SETTING FND THEN
         IF FDEF<1,B.VALDAT> = "" THEN
            FDEF<1,B.VALDAT> = STD_VAL<FND>
            SCRN_VTYP = STD_VTYP<FND>
         END ELSE
            CHK_VALDAT = CHANGE(FDEF<1,B.VALDAT>,",",VM)
            VLINES = DCOUNT(CHK_VALDAT,VM)
*           FOR VLN TO VLINES
*           NEXT VLN
         END
         SCRN_TBAR = STD_TBAR<FND>
      END ELSE
         SCRN_VTYP = ""
         SCRN_TBAR = ""
      END
      RETURN
   END
