*
   SFILE = ""
   SNAME = ""
   FFILE = ""
   FNAME = ""
   PCNAME = ""
   STK_FILE = ""
   STK_NAME = ""
   STK_ON = 1
   STK_CMD = ""
   PROCREAD INBUFF ELSE INBUFF = ""
   BEGIN CASE
   CASE INBUFF<1> = "SCREEN.INPUT" AND INBUFF<2> # "" AND INBUFF<3> # ""
      MATREAD PCNX.REC FROM PCNAME_XREF, INBUFF<3> THEN
         IF INBUFF<2> = PCNX_ID THEN
            STK_FILE = PCNX_FILE
            STK_NAME = PCNX_ID
            GOSUB 100
            GOTO 99999
         END
      END
   CASE INBUFF<1> = "SELECTLIST" OR INBUFF<1> = "SELECT"
      IF INBUFF<1> = "SELECT" THEN
         SELECT PCNAME_XREF
      END
      IF INBUFF<2> = "F" THEN
         STK_CMD = "F"
      END ELSE
         STK_CMD = "E"
      END
      LOOP
         READNEXT PCNX_ID ELSE STK_ON = 0
      WHILE STK_ON DO
         MATREAD PCNX.REC FROM PCNAME_XREF, PCNX_ID THEN
            STK_FILE = PCNX_FILE
            STK_NAME = PCNX_ID
            GOSUB 100
         END
      REPEAT
      GOTO 99999
   END CASE
   LOOP WHILE STK_ON DO
      GOSUB 100
   REPEAT
   GOTO 99999
*
*---- MAIN PROCESSING
*
100 *
   ECD.ACTION = 2; CALL SCRN.EDIT
   MAT SCV.REC = ""
*
*---- Enter FILE Name
110 *
   ECD.NUM = 1
   IF STK_FILE = "" THEN
      ECD.ACTION = 4; CALL SCRN.EDIT
   END ELSE
      ECD.RET.VALUE = STK_FILE
      SCV.REC(ECD.NUM)<ECD.SCRN.NO> = ECD.RET.VALUE
      ECD.ACTION = 5; CALL SCRN.EDIT
      STK_FILE = ""
   END
   BEGIN CASE
      CASE ECD.RET.VALUE = "END"
         STK_ON = 0
         GOTO 199
      CASE ECD.RET.VALUE = ""
         PCNAME = ""
         GOSUB 300
         IF ECD.RET.VALUE = "END" THEN
            GOTO 110
         END
      CASE 1
         IF INDEX(ECD.RET.VALUE,".",1) = 0 THEN
            ECD.RET.VALUE = ECD.RET.VALUE:".SCREENS"
            SCV.REC(1) = ECD.RET.VALUE
            ECD.NUM = 1; ECD.ACTION = 5; CALL SCRN.EDIT
         END
         IF FIELD(ECD.RET.VALUE,".",2) # "SCREENS" THEN
            IF STK_ON THEN
               GOTO 199
            END ELSE
               ERRMSG = 'Screen file name must end with ".SCREENS"'
               GOSUB 91000; GOTO 110
            END
         END
         ERR = 0
         READ REC FROM MD, ECD.RET.VALUE THEN
            IF REC<1> # "F" THEN
               ERR = 1
            END ELSE
               OPEN '',ECD.RET.VALUE TO SYS.SCREENS ELSE ERR = 1
            END
         END ELSE
            ERR = 1
         END
         IF ERR THEN
            IF STK_ON THEN
               GOTO 199
            END ELSE
               ERRMSG = "INVALID FILE NAME - ":ECD.RET.VALUE
               GOSUB 91000; GOTO 110
            END
         END
         SFILE = ECD.RET.VALUE
         GOSUB 200
   END CASE
   SCREEN.NAME = SNAME
   SCREEN.DIMENSIONS = ""
