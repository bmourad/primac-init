FUNCTION PROMPT_YES_NO(PROMPT_STRING)
*T26141
*COPY>CPYLIB>COM1
*COPY>CPYLIB>EDIT.COM
  DIM EDIT.COM.SAVE(EDIT.COM.SIZE)
  MAT EDIT.COM.SAVE = MAT EDIT.COM
  X = 0
  Y = 23
  MAXL = 1
  O.R = "R"
  PMSG = PROMPT_STRING
  TYP = 18
  MINV = ''
  MAXV = ''
  DEFAULT = 'N'
  CALL EDIT.SUB
  RETURNVAL = UPCASE(VALUE)
  MAT EDIT.COM = MAT EDIT.COM.SAVE
  PRINT @(0,23):@(-3):@(-10)
RETURN RETURNVAL
