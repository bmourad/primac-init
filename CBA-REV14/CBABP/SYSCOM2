     SUBROUTINE SYSCOM2 (MAT SYSCOM.REC)
PRECISION 2
* REVISION    - [08.0]
* Copyright 1982 by Computer Business Associates (Vercom Software, Inc.)
*COPY>CPYLIB>SYSCOM
*COPY>CPYLIB>CHAR
*
     PROMPT ""
     BEGIN CASE
       CASE SYS.TYPE = 1
          MAT SYSCOM.REC = ''
          SYS.TYPE = 2
       CASE SYS.TYPE = 2
          BEGIN CASE
             CASE ERR.TYPE = 1
                PRINT @(0,23) : CL : ERRMSG :
                INPUT XX :
                PRINT @(0,23) : CL :
             CASE ERR.TYPE = 2
                PRINT @(0,23) : 'WARNING !! PLEASE NOTE DOWN THIS MESSAGE, AND CONTACT YOUR VENDOR' : CL :
                INPUT XX :
                PRINT @(0,23) : ERRMSG : CL :
                INPUT XX :
                PRINT @(0,23) : CL :
             CASE ERR.TYPE = 3
                PRINT @(0,23) : 'ALERT !! PLEASE NOTE THIS MESSAGE, AND CONTACT YOUR VENDOR IMMEDIATELY' : CL :
                INPUT XX :
                PRINT @(0,23) : ERRMSG : CL :
                INPUT XX :
                PRINT @(0,23) : CL :
                CHAIN "OFF"
             CASE 1
          END CASE
       CASE 1
     END CASE
     RETURN
     END
