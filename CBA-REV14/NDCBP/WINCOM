****************************
*                          *
*  WINCOM DATA DEFINITION  *
*                          *
****************************
*
      DIM WCOM(40)
*
      EQU WCOM.WND          TO  WCOM(1)   ;* Window ID
      EQU WCOM.CLASS        TO  WCOM(2)   ;* Window Class
      EQU WCOM.CAPTION      TO  WCOM(3)   ;* Window Caption
      EQU WCOM.STYLE        TO  WCOM(4)   ;* Window Style
      EQU WCOM.TYPE         TO  WCOM(5)   ;* Data Type
      EQU WCOM.DATA         TO  WCOM(6)   ;* Data
      EQU WCOM.COL          TO  WCOM(7)   ;* Starting Column
      EQU WCOM.ROW          TO  WCOM(8)   ;* Starting Row
      EQU WCOM.WIDTH        TO  WCOM(9)   ;* Width
      EQU WCOM.HEIGHT       TO  WCOM(10)  ;* Height
      EQU WCOM.IDENT        TO  WCOM(11)  ;* Menu or Control ID
      EQU WCOM.SELECT       TO  WCOM(12)  ;* Object Selection ID
      EQU WCOM.FCOLOR       TO  WCOM(13)  ;* Foreground Color
      EQU WCOM.BCOLOR       TO  WCOM(14)  ;* Background Color
      EQU WCOM.RCOLOR       TO  WCOM(15)  ;* Border     Color
      EQU WCOM.SCOLOR       TO  WCOM(16)  ;* Selection  Color
      EQU WCOM.FSIZE        TO  WCOM(17)  ;* Font Point Size
      EQU WCOM.FTYPE        TO  WCOM(18)  ;* Font Type
      EQU WCOM.MENU.BAR     TO  WCOM(19)  ;* (MV) Menu Bar Definition
      EQU WCOM.LWIDTH       TO  WCOM(20)  ;* Line width
      EQU WCOM.MSELECT      TO  WCOM(21)  ;* Multiple select flag
      EQU WCOM.LEVEL        TO  WCOM(22)  ;* Data level
      EQU WCOM.FONT         TO  WCOM(23)  ;* Data font
      EQU WCOM.ALIGN        TO  WCOM(24)  ;* Data alignment
      EQU WCOM.MINV         TO  WCOM(25)  ;* Minimum scroll value
      EQU WCOM.MAXV         TO  WCOM(26)  ;* Maximum scroll value
      EQU WCOM.CURV         TO  WCOM(27)  ;* Current scroll value
      EQU WCOM.INCR         TO  WCOM(28)  ;* Scroll increment
      EQU WCOM.AID          TO  WCOM(29)  ;* Associated ID
      EQU WCOM.SELTYPE      TO  WCOM(30)  ;* Selection type
*
      EQU WCOM.CURR.WND     TO  WCOM(37)  ;* Current window
      EQU WCOM.COLORS       TO  WCOM(38)  ;* (MV) Valid colors
      EQU WCOM.MODE         TO  WCOM(39)  ;* Function Mode
      EQU WCOM.STATUS       TO  WCOM(40)  ;* Function Error Status
*
*--------------------------------------------------------------------
*
      DIM WCHT(20)
*
      EQU WCHT.TYPE         TO  WCHT(1)   ;* Chart Type
      EQU WCHT.HEAD         TO  WCHT(2)   ;* Chart Heading
      EQU WCHT.SHEAD        TO  WCHT(3)   ;* Chart Sub-heading
      EQU WCHT.YHEAD        TO  WCHT(4)   ;* Chart Y-Axis Heading
      EQU WCHT.XHEAD        TO  WCHT(5)   ;* Chart X-Axis Heading
      EQU WCHT.DESC         TO  WCHT(6)   ;* (MA) Data Description
      EQU WCHT.COLOR        TO  WCHT(7)   ;* (MA) Chart Data Colors
      EQU WCHT.DHEAD        TO  WCHT(8)   ;* (MV) Data Heading
      EQU WCHT.DATA         TO  WCHT(9)   ;* (MA,MV) Data
      EQU WCHT.SELECT       TO  WCHT(10)  ;* (MA,MV) Select ID
      EQU WCHT.BWIDTH       TO  WCHT(11)  ;* Chart Bar Width
      EQU WCHT.BSPACE       TO  WCHT(12)  ;* Chart Bar Spacing
      EQU WCHT.SHADOW       TO  WCHT(13)  ;* "Y" = Bar Shadows
      EQU WCHT.SSPACE       TO  WCHT(14)  ;* Chart Set Spacing
