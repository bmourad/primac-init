10 *
OPEN "BPC" TO BPC ELSE PRINT "NO BPC FILE"
PRINT "ENTER NAME TO SAVE TO "
INPUT INAME
READ TREC FROM BPC, INAME THEN
  PRINT INAME:" ALREADY EXIST.  OVERWRITE?(Y/N)":
  INPUT RESP:
  IF RESP[1,1]#"Y" THEN GOTO 10
END
CTR=0
PRINT "WHEN SEND IS COMPLETE ENTER 'XYZZY'":
PRINT
PRINT "PRESS RETURN NOW AND THEN SEND RECORD ":
INPUT XXX
DONE=0
TREC=''
LOOP
UNTIL DONE DO
  INPUT LLINE
  IF LLINE = 'XYZZY' THEN
     DONE=1
     IF TREC # "" THEN
        WRITE TREC ON BPC,INAME
     END
  END ELSE
    IF LLINE # "" THEN
      TREC<-1>=LLINE
    END
  END
REPEAT
STOP
