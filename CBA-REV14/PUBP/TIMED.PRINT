PRINT "NUMBER OF MINUTES BETWEEN WAITS (CR-15) :":
INPUT RESP
IF RESP = "" THEN RESP = 15
IF NOT(NUM(RESP)) THEN 
  PRINT "INVALID RESPONSE MUST BE NUMERIC"
  STOP
END
START.TIME=TIME()
DONE=0
CTR=1
RESP = RESP * 60
LOOP
UNTIL DONE DO
  EXECUTE "SLEEP ":RESP
  PRINT OCONV(TIME(),"MT"):" ":OCONV(TIME() - START.TIME,"MTS")
  CTR=CTR+1
REPEAT
