*****************************
* REVISION  - [10.0]        *
*  INVOICE FILE DEFINITION  *
*    KEY = CONO:INVOICE#    *
*****************************
IVC.REC.SIZE = 70
$IFNDEF INVOICE
      DIM IVC.REC(70)
$ENDIF
EQU IVC.DATE          TO IVC.REC(1)     ;* Date created
EQU IVC.JOB.NO        TO IVC.REC(2)     ;* Job number
EQU IVC.CUST.NO       TO IVC.REC(3)     ;* Customer number
EQU IVC.CUST.NAME     TO IVC.REC(4)     ;* Customer name (MV FOR INSTANT WEB)
EQU IVC.ADDR1         TO IVC.REC(5)     ;* Address line 1 (MV FOR INSTANT WEB)
EQU IVC.ADDR2         TO IVC.REC(6)     ;* Address line 2 (MV FOR INSTANT WEB)
EQU IVC.ADDR3         TO IVC.REC(7)     ;* Address line 3 (MV FOR INSTANT WEB)
EQU IVC.ADDR4         TO IVC.REC(8)     ;* Address line 4 (MV FOR INSTANT WEB)
EQU IVC.CHG.CODE      TO IVC.REC(9)     ;* (MV1) Invoice charge code
EQU IVC.CHG.CAT       TO IVC.REC(10)    ;* (MV1) Charge code category
EQU IVC.QUANTITY      TO IVC.REC(11)    ;* (MV1) Quantity invoiced
EQU IVC.DESC          TO IVC.REC(12)    ;* (MV1) Item description
EQU IVC.TAX.JURS      TO IVC.REC(13)    ;* (MV1) Tax Jurisdiction or Ship-Via code
EQU IVC.AMOUNT        TO IVC.REC(14)    ;* (MV1) Item amount
EQU IVC.PROC.DATE     TO IVC.REC(15)    ;* Date processed
EQU IVC.PRT.DATE      TO IVC.REC(16)    ;* Date printed
EQU IVC.PROC.MON      TO IVC.REC(17)    ;* Posting Month
EQU IVC.STATUS        TO IVC.REC(18)    ;* No post status
EQU IVC.LAST          TO IVC.REC(19)    ;* Last invoice (Y/N)
EQU IVC.WIP.DATE      TO IVC.REC(20)    ;* (MV-2) WIP Date
EQU IVC.WIP.PRCNT     TO IVC.REC(21)    ;* (MV-2) WIP percent
                                        ; *in CBN version this field is 
 *submultivalued since each piece of cost is reversed separately.
EQU IVC.HIDDEN        TO IVC.REC(22)    ;* (MV1) Hidden line (Y/N)
EQU IVC.CHG.JOB       TO IVC.REC(23)    ;* (MV1) Job to bill
EQU IVC.PRE.BILL      TO IVC.REC(24)    ;* "Y" = Credit sales for all job pre-bills
EQU IVC.ATTENTION     TO IVC.REC(25)    ;* Attention name (MV FOR INSTANT WEB)
EQU IVC.PRE.BILL.MON  TO IVC.REC(26)    ;* Posting month (pre-bill to sales)
EQU IVC.TAXABLE       TO IVC.REC(27)    ;* (MV1) (PRIMAC- taxable amt for TAX category only)
                                      * (MV1) (TEMPO-  taxable amt for OTH,SHP,SUB and TAX catg. if invoice code is taxable)
EQU IVC.CCTR          TO IVC.REC(28)    ;* (MV1) Cost center (AETNA)
EQU IVC.USER.ID       TO IVC.REC(28)    ;* (COMMUN) User ID
EQU IVC.AUTO.FLAG     TO IVC.REC(28)    ;* (SHERIDAN) Auto Invoice Flag
EQU IVC.UM            TO IVC.REC(29)    ;* (MV1) Unit of measure (LITHO,COMMUN)
EQU IVC.UNIT.PRICE    TO IVC.REC(30)    ;* (MV1) Unit price (LITHO,COMMUN)
EQU IVC.WIP.TYPE      TO IVC.REC(31)    ;* (MV-2) Wip type (LB,MT,OS,SP,MS OR ALL)
EQU IVC.TAX.RATE      TO IVC.REC(32)    ;* (MV1) Tax Rate (PRIMAC)
                                      * (MV1) % shipped in Illinois (TEMPO)
EQU IVC.FRT.FOLLOW    TO IVC.REC(33)    ;* Used By COM / PRINTERS II
EQU IVC.DEPT          TO IVC.REC(33)    ;* (COMMUN) (MV1) Master department
EQU IVC.QTY.ROLL.FLAG TO IVC.REC(33)    ;* (GWP) (MV1) HIDDEN FLAG QTY ROLL-UP
EQU IVC.TRANSMIT      TO IVC.REC(34)    ;* (QBR) Transmission Date/Time 
EQU IVC.SPEC.TERM     TO IVC.REC(34)    ;* Used only for Murray
EQU IVC.LIST.UNIT     TO IVC.REC(34)    ;* (COMMUN) (MV1) List unit price
EQU IVC.PRC.ROLL.FLAG TO IVC.REC(34)    ;* (GWP) (MV1) HIDDEN FLAG UNIT PRICE ROLL-UP
EQU IVC.COMM.AMT      TO IVC.REC(35)    ;* Used By Tempo & SEQUOIA
EQU IVC.LIST.AMT      TO IVC.REC(35)    ;* (COMMUN) (MV1) List amount
EQU IVC.WIP           TO IVC.REC(36)    ;* (SVM) Used By Viking
EQU IVC.SALE.CREDIT   TO IVC.REC(36)    ;* (COMMUN) (MV1) Sale credit
EQU IVC.COMM.JOB.AMT  TO IVC.REC(36)    ;* (SEQUOIA) (MV1) T26130
EQU IVC.FRT.NO.CHG    TO IVC.REC(36)    ;* (LTI) (MV1) Freight No Chrg Amt
EQU IVC.STD.COST.PER  TO IVC.REC(37)    ;* (SEQUOIA) T26750
EQU IVC.FRT.NC.COM    TO IVC.REC(37)    ;* (LTI) (MV1) Freight N/C Comment
EQU IVC.SHP.DATE      TO IVC.REC(37)    ;* Used by SGI
EQU IVC.DIFFERENTIAL  TO IVC.REC(37)    ;* (COMMUN) (MV1) Differential
EQU IVC.STD.COST.AMT  TO IVC.REC(38)    ;* MV3 (SEQUOIA) T26750
EQU IVC.BIND.SHP      TO IVC.REC(38)    ;* Used by NEBC
EQU IVC.LINE.FLG      TO IVC.REC(38)    ;* (COMMUN) (MV1) Line flag
EQU IVC.AR.ACCT       TO IVC.REC(38)    ;* (CENTURY) T20069 Accounts Recv#
EQU IVC.STD.COST.MRG  TO IVC.REC(39)    ;* MV3 (SEQUOIA) T26750
EQU IVC.SHP.WGT       TO IVC.REC(39)    ;* (MV1)Used by NEBC
EQU IVC.TAX           TO IVC.REC(39)    ;* (COMMUN) (MV1,SV) Tax amount
EQU IVC.SHP.TO        TO IVC.REC(40)    ;* (COMMUN) (MV1) Ship To
EQU IVC.COA           TO IVC.REC(40)    ;* (PRINTCO) (MV1,SVM) G/L Account
EQU IVC.PO.NO         TO IVC.REC(40)    ;* (VHP) P/O # entered on the invoice.
*                                       ;* Used in SGI to store sales codes by line item
*                                       ;* Used by Heritage Ref Invoice # : Invoice type sort code !01=Invoice !02=CM
*                                       ;* !03 = DM, !04=MI
EQU IVC.COMMENTS      TO IVC.REC(41)    ;* (SEQUOIA) T26130
EQU IVC.SHP.NO        TO IVC.REC(41)    ;* (COMMUN) Ship To number
EQU IVC.DIV           TO IVC.REC(41)    ;* (PRINTCO) (MV1,SVM) Division
EQU IVC.CON.PO        TO IVC.REC(42)    ;* Consumer PO number. Used by Stevens.
EQU IVC.SHP.NAME      TO IVC.REC(42)    ;* (COMMUN) Ship To name
EQU IVC.BILL.NAME     TO IVC.REC(42)    ;* (NAHAN) 25093
EQU IVC.TERMS         TO IVC.REC(43)    ;* Payment terms, CUSTOM & Sheridan Used by Stevens.
EQU IVC.SHP.ADDR1     TO IVC.REC(43)    ;* (COMMUN) Ship To Address line 1
EQU IVC.BILL.ADDR1    TO IVC.REC(43)    ;* (NAHAN) 25093
EQU IVC.CONTRACT      TO IVC.REC(44)    ;* Contract Number. Used by Brace
EQU IVC.SHP.ADDR2     TO IVC.REC(44)    ;* (COMMUN) Ship To Address line 2
EQU IVC.BILL.ADDR2    TO IVC.REC(44)    ;* (NAHAN) 25093
EQU IVC.COA.AMT       TO IVC.REC(44)    ;* (PRINTCO) (MV1,SVM) Amount
EQU IVC.PRINT.ORD     TO IVC.REC(45)    ;* Print Order Number. Used by Brace
EQU IVC.SHP.ADDR3     TO IVC.REC(45)    ;* (COMMUN) Ship To Address line 3
EQU IVC.BILL.ADDR3    TO IVC.REC(45)    ;* (NAHAN) 25093
EQU IVC.GPO           TO IVC.REC(46)    ;* GPO Number. Used by Brace
EQU IVC.SHP.ADDR4     TO IVC.REC(46)    ;* (COMMUN) Ship To Address line 4
EQU IVC.BILL.ADDR4    TO IVC.REC(46)    ;* (NAHAN) 25093
EQU IVC.PARTIAL       TO IVC.REC(47)    ;* (COMMUN) Partial Code
EQU IVC.WIP.DEPT      TO IVC.REC(48)    ;* (COMMUN) (MV-2) WIP departments
EQU IVC.SALES.CR      TO IVC.REC(49)    ;* (COMMUN) Sales credit flag (Y/N)
EQU IVC.CURR.CODE     TO IVC.REC(50)    ;* (LMFP) Currency Code
EQU IVC.PO.NO.COM     TO IVC.REC(50)    ;* (COMMUN) P/O Number
EQU IVC.DUE.DATE      TO IVC.REC(50)    ;* CUSTOM
*                                       ;* Also used by Sheridan (T22827)
EQU IVC.EX.RATE       TO IVC.REC(51)    ;* (LMFP) Exchange Rate
EQU IVC.TAX.OVER.FLG  TO IVC.REC(51)    ;* (COMMUN) Tax Overwrite Flag
EQU IVC.EX.CALC       TO IVC.REC(52) ;* (LMFP) Exchange Calculation
EQU IVC.ALLOC.DIV     TO IVC.REC(53) ;* MV2 (REV10) DIV ALLOCATION BY INV.CHG.CODE
EQU IVC.ALLOC.AMT     TO IVC.REC(54) ;* MV2 (REV10) ALLOCATION AMT BY INV.CHG.CODE
**** FOLLOWING FOR POSH JR 03/07/95
***EQU IVC.STATE         TO IVC.REC(55) ;* State for POSH
***EQU IVC.ZIP           TO IVC.REC(56) ;* Zip for POSH
***EQU IVC.COUNTRY       TO IVC.REC(57) ;* Country for POSH
EQU IVC.PRINTED.NO    TO IVC.REC(55) ;* Invoice printed number (SRCMEX)
EQU IVC.DEPT.LIST     TO IVC.REC(57) ;* T23250 MVX Tweddle list of depts
EQU IVC.CUSTOM.PRE.BILL TO IVC.REC(58) ;* CUSTOM
EQU IVC.BILL.SHIP.TO     TO IVC.REC(58) ;* (JAPS) BILL SHIP TO NUMBER
EQU IVC.DEPT.FLAG     TO IVC.REC(58) ;* T23250 MVX Tweddle Y or N
EQU IVC.SUB.JOB.FLAG  TO IVC.REC(59)    ;* (JAPS) SUB JOBS ROLLUP FLAG Y/N
EQU IVC.DEPT.PERCENT  TO IVC.REC(59) ;* T23250 MVX Tweddle dept percentage
EQU IVC.GLA.DATE      TO IVC.REC(60)    ;* (JAPS) EOD CLOSE T19256
*                                       ;* P = PROCESSED
EQU IVC.LIST.DATE     TO IVC.REC(62)    ;* Date Edit List was printed.
EQU IVC.DISC.DATE     TO IVC.REC(63)    ;* Discount date (WARD)
EQU IVC.DISC.AMT      TO IVC.REC(64)    ;* Discount amount (WARD)
EQU IVC.PRT.FLG       TO IVC.REC(65)    ;* MV1-print flag MV2-email flag
EQU IVC.PERIOD.POST   TO IVC.REC(66)   ;* CBN T26605 PERIOD TO POST INVOICE
EQU IVC.INVOICE.TYPE  TO IVC.REC(67)   ;* CBN T26605 F,M,P
