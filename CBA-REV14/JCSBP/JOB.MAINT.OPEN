      ERR.TYPE=3;CALL SYSCOM(MAT SYSCOM.REC)
* 93000*
*       PRINT @(0,23) : "Cannot locate the " : ERRMSG : " file" : CL :
*       INPUT XX :
*       PRINT @(0,23) : CL :
