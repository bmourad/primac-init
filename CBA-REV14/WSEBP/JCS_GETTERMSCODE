SUBROUTINE JCS_GETTERMSCODE(CONO, SCHEMA.ONLY, ERRMSG, STRXML)
STRXML = '<Terms><TermsCode></TermsCode><TermsDescription>--Select--</TermsDescription></Terms>'
$INCLUDE PMC.CPYLIB TERMS
OPEN "","TERMS" TO TERMS ELSE
           ERRMSG = "CANNOT OPEN TERMS FILE"
           RETURN
END
CMD= "SSELECT TERMS WITH @ID LIKE '" : CONO : "...'"
UDTEXECUTE CMD
DATA=1
LOOP
  READNEXT ID ELSE DATA=0
  WHILE DATA DO
     STRXML := '<Terms><TermsCode>' : ID[4,99] : '</TermsCode>'
     READV TERMS.DESC FROM TERMS,ID, 1 ELSE TERMS.DESC=''
     STRXML := '<TermsDescription>' : ID[4,99]:'-':TERMS.DESC : '</TermsDescription></Terms>'
REPEAT
RETURN
