SUBROUTINE JCS_DEPARTMENT(CONO,DEPT.ACCT,SCHEMA.ONLY,ERRMSG,STRXML)
STRXML:='<Depart><Dept></Dept></Depart>'
$INCLUDE PMC.CPYLIB DEPARTMENT
$INCLUDE PMC.CPYLIB COMPANY
 OPEN '','DEPARTMENT' TO DEPARTMENT ELSE
ERRMSG = 'CANNOT OPEN DEPARTMENT FILE'
GOTO 99999
OPEN '','COMPANY' TO COMPANY ELSE
ERRMSG ='CANNOT OPEN COMPANY FILE'
GOTO 99999
SCHEMA.ONLY="1"
 MATREAD COMP.REC FROM COMPANY,CONO ELSE
 ERRMSG=CONO:"- THIS COMPANY NUMBER DOES NOT EXIST"
GOTO 99999
MATREAD DEPT.REC FROM DEPARTMENT, CONO:DEPT.ACCT THEN
STRMXL=''
SCHEMA.ONLY="0"
STRXML:='<Depart>'
 STRXML := '<Dept>' : DEPT.ACCT :'</Dept>'
STRXML:='</Depart>'
END
 99999*
 IF ERRMSG <> "" THEN
 ERRMSG = "GetEstimateDepartment  ---> JES_GETESTIMATEDEPT ---> " : ERRMSG
RETURN
END
