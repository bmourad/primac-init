SUBROUTINE WRITELOG(ERRMSG)
   OPENSEQ "WSEBP","WSE_LOG.TXT" TO LOG.FILE ELSE
	ERRMSG = "CANNOT OPEN WSE_LOG FILE"
	GOTO 99999
    END
    ERRMSG = OCONV(DATE(),"D4/") : " " : OCONV(TIME(),"MTS") : " " : ERRMSG
    WRITESEQ ERRMSG APPEND TO LOG.FILE ELSE
	ERRMSG ="CANNOT WRITE TO THE WSE_LOG FILE"
	GOTO 99999
    END
    CLOSESEQ LOG.FILE
    ERRMSG = ""
99999
RETURN
END
