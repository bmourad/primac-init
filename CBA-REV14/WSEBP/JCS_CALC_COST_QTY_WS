FUNCTION JCS_CALC_COST_QTY_WS (STK.QTY,MAT INV.CNV.REC,ROND,LN)
*
* THIS FUNCTION CONVERTS QTY FROM STOCKING UOM TO COSTING UOM.
*
$INCLUDE ICS.CPYLIB INV.CNV
*
IF LN='' THEN LN=1
IF ROND='' THEN
  ROND=0.5
  IF STK.QTY<0 THEN ROND= -(.5)
END
COST.QTY = INT(((STK.QTY/ICR.MT1<LN>)*ICR.DV1<LN>)*ICR.DV2<LN>+ROND)
RETURN COST.QTY
