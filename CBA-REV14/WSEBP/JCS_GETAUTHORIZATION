****** SUBROUTINE FOR THE WEB SERVICE AUTHORIZE JOB IN JOB SERVICE  
****** BY JQ
SUBROUTINE JCS_GETJOB(CONO,ID, SCHEMA.ONLY,ERRMSG, OUT_PARAM_AUTH)
OPEN '','CREDIT.AUTH.CODE' TO CREDIT.AUTH.CODE ELSE
  ERRMSG = 'CANNOT OPEN CREDIT.AUTH.CODE FILE'
  GOTO 99999
  RETURN
END
SCHEMA.ONLY="1"
READ TREC FROM CREDIT.AUTH.CODE, CONO:ID THEN
  SCHEMA.ONLY ="0"
  OUT_PARAM_AUTH :='<CreditAuth><Code>':"1":'</Code></CreditAuth>'
END ELSE
  SCHEMA.ONLY ="0"
  OUT_PARAM_AUTH :='<CreditAuth><Code>':"0":'</Code></CreditAuth>'
END
99999 *
IF ERRMSG <> "" THEN
  ERRMSG = "ERROR FROM JCS_GETJOB --> " : ERRMSG
  CALL WRITELOG(ERRMSG)
END
RETURN
