SUBROUTINE getPMCDropDowns_XML2
********************************************************************************
*   Program name :- getPMCDropDowns_XML
*   Created:- 9/14/2005
*------------------------------------------------------------------------------*
*

* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
*ERRMSG = RBO.getProperty('','DREFCREF',TEMP_INPUT)
ERRMSG = RBO.getProperty('','TEMP_INPUT',TEMP_INPUT)
MYVARS = ''				;*CONTAINS ALL THE FIELD_NAMES TO FETCH FROM UNIDATA 6.0+
QUERY = FIELD(TEMP_INPUT,"`",1)
IF QUERY = '' THEN QUERY = "..."
TEMP_INPUT = FIELD(TEMP_INPUT,"`",2)
CONO = TEMP_INPUT<1,1>		;*001
PROCESS_ID = TEMP_INPUT<1,2>	;*ESTCEM
NCNT = DCOUNT(TEMP_INPUT, @VM)
FOR I = 3 TO NCNT
		IF MYVARS = "" THEN 
			MYVARS = TEMP_INPUT<1,I>
		END ELSE
			MYVARS := " " : TEMP_INPUT<1,I>
		END
NEXT I
IN_PARAM = "LIST " : MYVARS : " WITH @ID LIKE '" : CONO : QUERY : "' TOXML TO ":PROCESS_ID:".XML"
UDTEXECUTE IN_PARAM CAPTURING XYZ
*I WOULDN'T LIKE TO CAPTURE IT TO THE SCREEN OR THE LOG, THATZ Y CAPTURING IT TO XYZ.
IN_PARAM = "WHERE"
UDTEXECUTE IN_PARAM CAPTURING OUT_PARAM
ERRMSG = RBO.setProperty('','ServerMessage',OUT_PARAM)
RETURN
