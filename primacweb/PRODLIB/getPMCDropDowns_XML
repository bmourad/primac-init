SUBROUTINE getPMCDropDowns_XML
********************************************************************************
*   Program name :- XMLgetPMCDropDowns
*   Created:- 10/18/2005 Ramakrishna Pusuluri
********************************************************************************
$INCLUDE WWINSERT RBO.H

STATUS = RBO.getProperty('','TEMP_INPUT',TEMP_INPUT)
STATUS = RBO.getProperty('','SESSION_ID',SESSION_ID)
   OPEN '',"_XML_" TO XML.FILE ELSE
      ERRMSG = "XML FOLDER IS MISSING"
      GOTO 93000
   END
OPEN '','CONTROL' TO CONTROL ELSE ERRMSG='CONTROL FILE MISSING';GOTO 93000
MYVARS = ''				;*CONTAINS ALL THE FIELD_NAMES TO FETCH FROM UNIDATA 6.0+
QUERY = FIELD(TEMP_INPUT,"`",1)
IF QUERY = '' THEN QUERY = "..."
TEMP_INPUT = FIELD(TEMP_INPUT,"`",2)
CONO = TEMP_INPUT<1,1>		;*001
PROCESS_ID = TEMP_INPUT<1,2>	;*ESTCEM
NCNT = DCOUNT(TEMP_INPUT, @VM)
FOR I = 3 TO NCNT
		IF MYVARS = "" THEN 
			MYVARS = TEMP_INPUT<1,I>
		END ELSE
			MYVARS := " " : TEMP_INPUT<1,I>
		END
NEXT I
CMD = "LIST " : MYVARS : " WITH @ID LIKE '" : CONO : QUERY : "' BY @ID TOXML TO ":PROCESS_ID:SESSION_ID
UDTEXECUTE CMD CAPTURING XYZ
WRITE CMD :"~":XYZ ON CONTROL,"SAJ"
*DO NOT WANT TO SHOW THE OUTPUT TO THE SCREEN OR THE LOG FILE, THATZ Y USING XYZ.
STMT2 = "copy FROM _XML_ TO LOCAL_XMLS "
STMT2 := PROCESS_ID:SESSION_ID:".XML"
STMT2 := " DELETING"
UDTEXECUTE STMT2 CAPTURING MESG

RETURN
93000:
	STATUS = RBO.getProperty('','ServerMessage',ERRMSG)
RETURN
