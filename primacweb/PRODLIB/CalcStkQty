*
* THIS FUNCTION CONVERTS QTY FROM COSTING UOM TO STOCKING UOM.

FUNCTION CALC.STK.QTY (COST.QTY,MAT INV.CNV.REC,ROND,LN)

ROND=0.5
STK.QTY=""
IF LN='' THEN
   LN=1
END
IF ROND='' THEN
  ROND=0.5
  IF COST.QTY<0 THEN ROND= -(.5)
END
$INCLUDE ICS.CPYLIB INV.CNV
STK.QTY = INT(((COST.QTY/ICR.DV1<LN>)*ICR.MT1<LN>)/ICR.DV2<LN>+ROND)  
RETURN STK.QTY
