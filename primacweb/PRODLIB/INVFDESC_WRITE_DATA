SUBROUTINE INVFDESC_WRITE_DATA
********************************************************************************
*   Program name :- INVFDESC_WRITE_DATA
*   Created:- 5/28/2003
*------------------------------------------------------------------------------*
*
* PROGRAMER : G.PURUSHOTHAM RAO
* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE ICS.CPYLIB INV.FULL.DESC

  OPEN '','CONTROL' TO CONTROL ELSE ERRMSG = "CONTROL FILE MISSING";GOTO 93000
 
 STATUS = RBO.getProperty('','ID',IFD.KEY)
 STATUS = RBO.getProperty('','IFD_NO',IFD.NO) 
 STATUS = RBO.getProperty('','IFD_LEN',IFD.LEN) 
 STATUS = RBO.getProperty('','IFD_FIX',IFD.FIX) 
 STATUS = RBO.getProperty('','IFD_FILL',IFD.FILL) 

 STATUS = RBO.getProperty('','IFD_FILL_LEN',IFD.FILL.LEN) 
 STATUS = RBO.getProperty('','IFD_SCALER',IFD.SCALER) 
 STATUS = RBO.getProperty('','IFD_JUSTIFY',IFD.JUSTIFY) 

* Insert method code here
MATWRITE IFD.REC ON CONTROL,IFD.KEY 
	ERRMSG = "RECORD UPDATED"
	GOTO 93000	
RETURN

93000 
  STATUS = RBO.setProperty('','ServerStatus',1)        
  STATUS = RBO.setProperty('','ServerMessage',ERRMSG) 
99999 
RETURN

