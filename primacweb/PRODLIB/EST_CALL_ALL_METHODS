SUBROUTINE EST_CALL_ALL_METHODS
********************************************************************************
*   Program name :- EST_CALL_ALL_METHODS
*   Created:- 8/11/2004 RAZI MOHIUDDIN
*------------------------------------------------------------------------------*
********************************************************************************
$INCLUDE WWINSERT RBO.H

* Insert method code here
*STATUS = RBO.getProperty('','PMCProperty',PMCProperty)

*CALL GetPMCDropDowns
*CALL getProdInfo
*CALL getEstPressIDs
*CALL getEstInkIds
*CALL getEstImpo
*CALL GetGearsetCodesTypes
*CALL GetDeptCctrs
*CALL GetRollLabelCodes
*CALL GetEstMatXref
*CALL GETEstimateDivisions
*CALL EST_INVENTORY
*CALL EST_JOBCATEGORY


ERRMSG = RBO.getProperty('','DREFCREF',TEMP_INPUT)

IF TEMP_INPUT = "" THEN
	CMD = "WHERE"
	UDTEXECUTE CMD CAPTURING X
	ERRMSG = RBO.setProperty('','ServerMessage',X)
	RETURN
END


MYVARS = ''				;*CONTAINS ALL THE FIELD_NAMES TO FETCH FROM UNIDATA 6.0+
QUERY = FIELD(TEMP_INPUT,"`",1)
IF QUERY = '' THEN QUERY = "..."
TEMP_INPUT = FIELD(TEMP_INPUT,"`",2)
CONO = TEMP_INPUT<1,1>		;*001
PROCESS_ID = TEMP_INPUT<1,2>	;*ESTCEM
NCNT = DCOUNT(TEMP_INPUT, @VM)
FOR I = 3 TO NCNT
		IF MYVARS = "" THEN 
			MYVARS = TEMP_INPUT<1,I>
		END ELSE
			MYVARS := " " : TEMP_INPUT<1,I>
		END
NEXT I
*CMD = "LIST " : MYVARS : " WITH @ID LIKE '" : CONO : "...' TOXML ELEMENTS WITHSCHEMA TO ":PROCESS_ID:".XML"
CMD = "LIST " : MYVARS : " WITH @ID LIKE '" : CONO : QUERY : "' TOXML TO ":PROCESS_ID:".XML"
UDTEXECUTE CMD CAPTURING XYZ
*DO NOT WANT TO SHOW THE OUTPUT TO THE SCREEN OR THE LOG FILE, THATZ Y USING XYZ.
CMD = "WHERE"
UDTEXECUTE CMD CAPTURING X
ERRMSG = RBO.setProperty('','ServerMessage',X)
RETURN
