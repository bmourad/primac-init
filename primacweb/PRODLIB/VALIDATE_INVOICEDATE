SUBROUTINE VALIDATE_INVOICEDATE
********************************************************************************
*   Program name :- VALIDATE_DATE
*   Created:- 1/9/2006
*------------------------------------------------------------------------------*
*

* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H

*CALL RBO_GET_PROPERTY('CH_DATE', CH_DATE, ERRMSG)
STATUS=RBO.getProperty('','DM_DATE',DM_DATE)

MINV = ""
DATE_ERRMSG = ""



MINV = ICONV(DM_DATE,"D2/")
IF MINV # "" THEN
   IF ABS(DATE() - MINV ) > 365*10 THEN
      DATE_ERRMSG = "DATE OUTSIDE 10 YEAR RANGE, CONTINUE (Y/N)? "
   END

END



STATUS=RBO.setProperty('','DATE_ERRMSG',DATE_ERRMSG)

RETURN

93000*
STATUS = RBO.setProperty('','ServerStatus',"1")
STATUS = RBO.setProperty('','ServerMessage',ERRMSG)


* End of method code
RETURN

