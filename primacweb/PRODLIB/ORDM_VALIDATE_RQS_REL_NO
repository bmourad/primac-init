SUBROUTINE ORDM_VALIDATE_RQS_REL_NO
********************************************************************************
*   Program name :- ORDM_VALIDATE_RQS_REL_NO
*   Created:- 2/1/2006
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE OPS.CPYLIB ORDER.RELEASE

OPEN "","ORDER.RELEASE" TO ORDER.RELEASE ELSE ERRMSG = "CANNOT OPEN ORDER.RELEASE FILE";GOTO 91000

* Insert method code here
STATUS = RBO.getProperty("","INARR",VALUE)
STATUS = RBO.getProperty("","PMCProperty",PMCProperty)
   CONO = PMCProperty<1,4>
   TEMP.REL.DATE = ""
   MATREAD ORR.REC FROM ORDER.RELEASE, CONO:VALUE ELSE
      ERRMSG = "Invalid Release number. Try again! "
      GOTO 91000
   END
   TEMP.REL.DATE = ORR.DATE
   DISPARR = OCONV(ORR.DATE,"D2/")
STATUS = RBO.setProperty("","DISPARR",DISPARR)
RETURN

* End of method code
91000
   STATUS = RBO.setProperty("","ServerStatus",1)
   STATUS = RBO.setProperty("","ServerMessage",ERRMSG)
RETURN

