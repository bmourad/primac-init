SUBROUTINE prodInfoHeadDesc
********************************************************************************
*   Program name :- prodInfoHeadDesc
*   Created:- 6/14/2006
*------------------------------------------------------------------------------*
*

* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE JES.CPYLIB EST.DESC.CODE
$INCLUDE JES.CPYLIB JES.FILE.VARS
$INCLUDE CPYLIB>CHAR
* Insert method code here

OPEN "","EST.DESC.CODE" TO EST.DESC.CODE ELSE
	ERRMSG="CAN'T OPEN EST.DESC.CODE"
END


CODE=''
STATUS=RBO.getProperty('','PMCProperty',PMCProperty)
STATUS=RBO.getProperty('','prodInfoID',CODE)
CONO=PMCProperty<1,4>

    MATREAD EDC.REC FROM EST.DESC.CODE,CONO:CODE ELSE
      ERRMSG = "Invalid description code.  Try again !"
      GOTO 90000
    END
    
    STATUS=RBO.setProperty('','prodInfoReturn',EDC.HEADING:"$":EDC.DESC)

* End of method code
RETURN

90000
   IF ERRMSG # '' THEN
	STATUS=RBO.setProperty('','ServerStatus',1)
	STATUS=RBO.setProperty('','ServerMessage',ERRMSG)
   END
RETURN

