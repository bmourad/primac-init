FUNCTION PHYIM_GET_RECP_ID(CONO,CONTROL,DATE)
CNTL.ID = CONO:"RECP.SEQ"                            
READU RECP.SEQ FROM CONTROL,CNTL.ID ELSE RECP.SEQ = 0
RECP.SEQ+=1                                          
IF RECP.SEQ>9999 THEN RECP.SEQ=1                     
WRITE RECP.SEQ ON CONTROL,CNTL.ID                    
*** ADDED BY ZIA
DATE = ICONV(DATE,"D4/")
*WRITE DATE ON CONTROL,'02DAT';*TESTING
*** END OF ADDITION
RECP.NO=DATE:RECP.SEQ
RECP.ID = CONO:RECP.NO  
WRITE RECP.ID ON CONTROL,'01DAT';*TESTING                             
RETURN RECP.ID

