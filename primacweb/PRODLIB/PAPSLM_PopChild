;*
;***** GET COMPANY NAME
;*
STATUS=RBO.getProperty('','PMCProperty',PMCProperty)
CONO=PMCProperty<1,4>
*MAT COMP.REC = ''
MATREAD COMP.REC FROM COMPANY,CONO ELSE
	MAT COMP.REC = ""
END	
IF CO.POS = 'Y' THEN
  OPEN '','PO' TO PO ELSE
    ERRMSG = 'PO FILE IS MISSING'; GOTO 93000
  END
END
IF CO.APS.R.INTRF > 1 THEN
  OPEN '','VEND.STATS' TO VEND.STATS ELSE 
