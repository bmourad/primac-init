  OPEN '','VEND.PROD.STATS' TO VEND.PROD.STATS ELSE
    ERRMSG = 'VEND.PROD.STATS FILE IS MISSING' ; GOTO 93000
  END
END
*

IF FILEINFO(INV_SERIAL,0)=0 THEN
  OPEN '','INV_SERIAL' TO INV_SERIAL ELSE
    ERRMSG<1,-1>='INV_SERIAL FILE IS MISSING'
  END
END
IF FILEINFO(WAREHOUSE,0)=0 THEN
  OPEN '','WAREHOUSE' TO WAREHOUSE ELSE
    ERRMSG<1,-1>='WAREHOUSE FILE IS MISSING'
   END
END

IF FILEINFO(INVENTORY,0)=0 THEN
  OPEN '','INVENTORY' TO INVENTORY  ELSE
    ERRMSG<1,-1>='INVENTORY FILE IS MISSING'
   END
END

  OPEN '','PO' TO PO ELSE
    ERRMSG = 'PO FILE IS MISSING'; GOTO 93000
  END

  OPEN '','INV.WHSE' TO INV.WHSE ELSE
    ERRMSG = 'INV.WHSE IS MISSING' ; GOTO 93000
  END
  OPEN '','CATEGORY' TO CATEGORY ELSE
    ERRMSG = 'CATEGORY FILE IS MISSING' ; GOTO 93000
  END

  OPEN '','INV_RECP_WHSE' TO INV_RECP_WHSE ELSE
    ERRMSG='INV_RECP_WHSE IS MISSING';GOTO 93000
  END

IF ERRMSG THEN GOTO 93000
;* get an ID AND PROD NUMBER
OPEN.FLAG=1
SLT.SLIT.STK.UOM=""
SLT.SLIT.CST.UOM=""
SLT.SLIT.CUTS=""
SLT.SLIT.WHSE=""
SLT.SLIT.LOC=""
SLT.SLIT.CST.UOM=""
SLT.SLIT.AMT=""
SLT.SLIT.CST.QTY=""
SLT.SLIT.STK.QTY=""
MAT ORG.IWH.REC=''
TEMP_IWH.ON.HAND=""            ;**** This TEMP_IWH.ON.HAND is to hold IWH.ON.HAND for temp being
LOG.INV.LINE = ''
LOG.PAP.WIDTH = ''
LOG.COLOR = ''
TEMP.COST = 0
SAVE.WHSE = ''
DIM SAVE.INV.REC(INV.REC.SIZE)
DIM SAVE.IWH.REC(IWH.REC.SIZE)
MAT SAVE.INV.REC = ''
MAT SAVE.IWH.REC = ''
MAT INV.REC = ''

  SLT.LOG.SERIAL=''
  SLT.LOG.DESC=''
  SLT.LOG.PROD=''
  SLT.LOG.WHSE=''
  SLT.LOG.LOC=''
  SLT.LOG.STK.UOM=''
  SLT.LOG.CST.UOM=''
  SLT.LOG.CST.UOM=''
  SLT.LOG.USED.STK.QTY=''
  SLT.LOG.USED.AMT=''
  SLT.LOG.SLIT=''
  SLT.LOG.SLIT.AMT=''
  SLT.LOG.TRIM=''
  SLT.LOG.TRIM.AMT=''



STATUS=RBO.getProperty('','SLT_LOG_SERIAL',SLT_LOG_SERIAL)
STATUS=RBO.getProperty('','SLT_ENT_DATE',SLT_ENT_DATE)
STATUS=RBO.getProperty('','SLT_PERIOD',SLT_PERIOD)
TEMP_SLT_ENT_DATE =""
*******ICONV(DATE(),"D2/")
SLT.ENT.DATE=DATE()

****************************This properties get the Child Data****************
STATUS = RBO.getProperty('','SLT_SLIT_CUTS',SLT_SLIT_CUTS)
STATUS = RBO.getProperty('','SLT_SLIT_PROD',SLT_SLIT_PROD)

****************************End the Child getDateData*************************


SER.STK.QTY=""
SLT.LOG.SLIT.QTY =""
IRW.ID=""
MAT ISTK.REC = ""
	MATREAD ISTK.REC FROM INV_SERIAL, CONO:SLT_LOG_SERIAL THEN
	 MATREAD INV.REC FROM INVENTORY, CONO:ISTK.PROD THEN

 		$INCLUDE ICSBP INV.UM.CNV
                   CATG.ID=CONO:INV.LINE
 			      SLT.LOG.PROD = ISTK.PROD
                           SLT.LOG.WHSE = ISTK.WHSE
                           SLT.LOG.LOC = ISTK.LOC
                        MATREAD CATG.REC FROM CATEGORY,CATG.ID ELSE MAT CATG.REC=''
* T26556 v
                        IF CATG.TRK.LVL # 'S' THEN
                          ERRMSG = 'Only Serial tracked products are allowed.'
MY_ERRMSG = 'Only Serial tracked products are allowed.'

                        END
* T26556 ^
                        IF CATG.COST.TYPE='AC' THEN 
                          DEPL.METHOD='AC'
                        END ELSE
                          DEPL.METHOD='FI'
                        END     ;*******   
			   IWH.ID=CONO:ISTK.PROD:"!":ISTK.WHSE
                        MATREAD IWH.REC FROM INV.WHSE,IWH.ID THEN 

                         * SLT.LOG.SERIAL = SLT_LOG_SERIAL     
*                          IF DEPL.METHOD='FI' THEN
                            INAH.PROD=ISTK.PROD
                            INAH.WHSE=ISTK.WHSE

				ACTION=1
                           TMP.CNT='' ; LAST='' ; TMP.ARR=''
                           PERIOD=SLT_PERIOD
			       OPEN.FLAG = 1
                            MAT ORG.IWH.REC = MAT IWH.REC
                            SLT.LOG.TRIM.QTY=ISTK.CUR.QTY
                            LOG.INV.LINE = INV.LINE
                            LOG.PAP.WIDTH = INV.PAP.WIDTH
                            LOG.COLOR = INV.COLOR
      			       LOG.M.WT=INV.M.WT
*STATUS = RBO.setProperty('','xy',"PROD " : INAH.PROD : " : WHSE S": INAH.WHSE) 
*RETURN

*T27990                     CALL ICS_IWH_SUB(CONO,PERIOD,TMP.ARR,TMP.CNT,LAST,ACTION,OPEN.FLAG)
                            CALL ICS_IWH_SUB (CONO,PERIOD,TMP.ARR,TMP.CNT,LAST,ACTION,OPEN.FLAG,ERRMSG)
				 RELEASE
			* STATUS = RBO.setProperty('','ServerMessage',"DEPL.METHOD- ":DEPL.METHOD:" RECP.NO- ":RECP.NO:" SLT.ENT.DATE- ":SLT.ENT.DATE:" DIFF.QTY- ":DIFF.QTY:" TYPE- ":TYPE :" SLT_PERIOD ":SLT_PERIOD)   
			*RETURN
*                          END ELSE
                            RECP.NO=ISTK.RECP
                            INVR.ID = CONO:RECP.NO
                            MATREAD INVR.REC FROM INV_RECEIPTS,INVR.ID THEN
                              IRW.ID=CONO:ISTK.RECP:"!":ISTK.WHSE
                              MATREAD IRW.REC FROM INV_RECP_WHSE,IRW.ID ELSE
                                ERRMSG='INV_RECP_WHSE record ':IRW.ID:' is missing.'
                              END 
                            END ELSE
                              ERRMSG='INV_RECEIPTS record ':INVR.ID:' is missing.'
                            END
*                          END
                        END ELSE
                          MAT IWH.REC=''
                        END
                          ;* maybe +5 should not be added because 
                          ;* if it is converted back might show
                          ;* more costing qty. than there really is.
                          SER.STK.QTY=INT(((ISTK.CUR.QTY/ICR.DV1)*ICR.MT1)/ICR.DV2+.5)
                          SER.STK.QTY=OCONV(SER.STK.QTY,ICR.CNV)
**STATUS = RBO.setProperty('','testProp',"SER.STK.QTY^^^ : ":SER.STK.QTY :"ISTK.CUR.QTY== ":ISTK.CUR.QTY)
                          SLT.LOG.USED.STK.QTY=SER.STK.QTY
                          SLT.LOG.USED.QTY=ISTK.CUR.QTY
                          SLT.LOG.SLIT.STK.QTY = 0
                          SLT.LOG.SLIT.AMT = 0


    SLT.LOG.USED.AMT=((SLT.LOG.USED.QTY/1000)*(SLT.LOG.UN.PRICE/10000))
    SLT.LOG.USED.AMT=ICONV(SLT.LOG.USED.AMT,"MD2")

*_____________________________________

  DIFF.QTY=-(SLT.LOG.TRIM.QTY);PRICE='';TYPE='';ERRMSG='';RET.ARR=''
*STATUS = RBO.setProperty('','ServerMessage',"DEPL.METHOD- ":DEPL.METHOD:" RECP.NO- ":ISTK.RECP:" SLT.ENT.DATE- ":SLT.ENT.DATE:" DIFF.QTY  ":DIFF.QTY:" TYPE- ":TYPE :" SLT_PERIOD- ":SLT_PERIOD)   
*RETURN
***STATUS = RBO.setProperty('','testProp',IWH.ON.HAND)
  CALL QTY_CHANGE_SUB(CONO,SLIT.CODE,MAT IWH.REC, MAT INV.REC, MAT PO.REC,DEPL.METHOD,ISTK.RECP,SLT.ENT.DATE,SLT_PERIOD,DIFF.QTY,PRICE,TYPE,ERRMSG,RET.ARR)
  RELEASE

IF ERRMSG='' THEN  
    TEMP.COST=ABS(RET.ARR<1>)
    SLT.LOG.UN.PRICE=(TEMP.COST/(ABS(DIFF.QTY)/10))
    SLT.LOG.UN.PRICE=ICONV(SLT.LOG.UN.PRICE,"MD4")

 END ELSE
   * GOSUB 93000 ; 
	ERR=1
  END

***********************
*GET.USED.SLIT.TRIM.AMT: 
***********************
  IF NOT(ERR) THEN
    *   SLT.LOG.USED.AMT=INT((SLT.LOG.USED.QTY/1000)*(SLT.LOG.UN.PRICE/10000)+.5)
    SLT.LOG.USED.AMT=((SLT.LOG.USED.QTY/1000)*(SLT.LOG.UN.PRICE/10000))
    SLT.LOG.USED.AMT=ICONV(SLT.LOG.USED.AMT,"MD2")
    TRIM.QTY = SLT.LOG.USED.QTY-SLT.LOG.SLIT.QTY
    *    SLT.LOG.TRIM.AMT=INT((TRIM.QTY/1000)*(SLT.LOG.UN.PRICE/10000)+.5)
    SLT.LOG.TRIM.AMT=((TRIM.QTY/1000)*(SLT.LOG.UN.PRICE/10000))
    SLT.LOG.TRIM.AMT=ICONV(SLT.LOG.TRIM.AMT,"MD2")
  END
*RETURN

*_____________________________________
	 END ELSE 
		MAT INV.REC=''
        END
         
       END ELSE 
		MAT ISTK.REC=''
	END
			STATUS=RBO.setProperty('','SLT_LOG_USED_STK_QTY',SLT.LOG.USED.STK.QTY)
			STATUS=RBO.setProperty('','SLT_LOG_USED_QTY',SLT.LOG.USED.QTY)
			STATUS=RBO.setProperty('','SLT_LOG_TRIM_QTY',SLT.LOG.TRIM.QTY)
			**STATUS=RBO.setProperty('','SLT_LOG_TRIM_AMT',SLT.LOG.TRIM.AMT)
			**STATUS=RBO.setProperty('','LOG_PAP_WIDTH',LOG.PAP.WIDTH) 

**------------------ BUILDING THE PARENT LINES

  IF ICR.CNV="MD0" THEN
    DQTY = OCONV(ICONV(SLT.LOG.USED.STK.QTY,"MD2"),"MD2")
  END ELSE
    DQTY = SLT.LOG.USED.STK.QTY 
  END

			***STATUS=RBO.setProperty('','xy',"xy HERE " :XY)
			STATUS=RBO.setProperty('','DQTY',DQTY)
			STATUS=RBO.setProperty('','SLT_LOG_USED_AMT',SLT.LOG.USED.AMT/100)
			STATUS=RBO.setProperty('','SLT_LOG_SLIT_QTY',OCONV(SLT.LOG.SLIT.QTY/10,"MD2"))
			STATUS=RBO.setProperty('','SLT_LOG_SLIT_AMT',SLT.LOG.SLIT.AMT/100)
			STATUS=RBO.setProperty('','SLT_LOG_TRIM_QTY',OCONV(SLT.LOG.TRIM.QTY/10,"MD2"))
			STATUS=RBO.setProperty('','SLT_LOG_TRIM_AMT',SLT.LOG.TRIM.AMT/100)
*************************************************************************
GOTO ENT.CHILD.PROD

**************
CALC.SLIT.AMT: 
**************
*
SAVE.CUTS = ""
   ERR=0
   *IF NOT(ERR) THEN
      SAVE.STK.QTY = SLT.SLIT.STK.QTY  ;*SSLT_SLIT_STK_QTY
      SAVE.CST.QTY = SLT.SLIT.CST.QTY  ;*SLT_SLIT_CST_QTY

      SAVE.AMT =     SLT.SLIT.AMT      ;*SLT_SLIT_AMT


      IF INV.UNIT<1,2>='LBS' AND INV.UNIT<1,3>='LBS' THEN
         *SLT.SLIT.STK.QTY=(SLT.LOG.USED.STK.QTY/(LOG.PAP.WIDTH/10000)*(INV.PAP.WIDTH/10000) / SLT_SLIT_CUTS)

         *SLT.SLIT.STK.QTY=INT(SLT.SLIT.STK.QTY+.5)
         *SLT.SLIT.CST.QTY=((SLT.LOG.USED.QTY/1000)/(LOG.PAP.WIDTH/10000)*(INV.PAP.WIDTH/10000) / SLT_SLIT_CUTS)

         *SLT.SLIT.CST.QTY=INT(SLT.SLIT.CST.QTY+.5)
        * SLT.SLIT.CST.QTY = SLT.SLIT.CST.QTY * 1000
        SLT.SLIT.STK.QTY = SLT.LOG.USED.STK.QTY
       SLT.SLIT.CST.QTY = SLT.LOG.USED.QTY


      END ELSE
         ;*# of cuts is actually pieces out. So if we have 1000 sheets and 
         ;* number of pieces out is 2 we would end up with 2000 sheets but
         ;* total weight would not change

         *SLT.SLIT.STK.QTY = SLT.LOG.USED.STK.QTY / SLT_SLIT_CUTS
         SLT.SLIT.STK.QTY = SLT.LOG.USED.STK.QTY * SLT_SLIT_CUTS

         ;* now we take stocking qty and convert it back to costing and see 
         ;*if we end up with more costing qty than we started with. For examp.
         ;* we made to many cuts.
        * SLT.SLIT.CST.QTY=INT(((SLT.SLIT.STK.QTY*ICR.DV1)/ICR.MT1)*ICR.DV2+.5)
         SLT.SLIT.CST.QTY=INT(((SLT.SLIT.STK.QTY*ICR.DV1)/ICR.MT1)*ICR.DV2+.5)

      END
      IF INV.UNIT<1,2>="SHT" AND INV.UNIT<1,3>="LBS" THEN
         SLT.SLIT.CST.QTY = INT(SLT.SLIT.CST.QTY / 1000 + .5) * 1000
      END
      IF INV.UNIT<1,3> = 'MSI' AND INV.UNIT<1,2> # 'MSI' THEN
         IF ABS(SLT.LOG.TRIM.QTY - SLT.SLIT.CST.QTY) < 50 THEN
            SLT.SLIT.CST.QTY = SLT.LOG.TRIM.QTY
         END
      END

      SLT.SLIT.AMT = ((SLT.SLIT.CST.QTY/1000)*(SLT.LOG.UN.PRICE/10000))
      SLT.SLIT.AMT=ICONV(SLT.SLIT.AMT,"MD2")
       IF SLT.SLIT.STK.UOM = 'SHT' OR SLT.SLIT.STK.UOM='FT' OR SLT.SLIT.STK.UOM='PC' THEN
        TMP.QTY = OCONV(ICONV(SLT.SLIT.STK.QTY,"MD2"),"MD2")
      END ELSE 
        TMP.QTY = SLT.SLIT.STK.QTY
      END
      *TMP.QTY = OCONV(ICONV(SLT.SLIT.STK.QTY,"MD2"),"MD2")
      STATUS=RBO.setProperty('','SLT_SLIT_STK_QTY',TMP.QTY)
      TMP.QTY=SLT.SLIT.CST.QTY/10
 
    STATUS=RBO.setProperty('','SLT_SLIT_CST_QTY',OCONV(TMP.QTY,"MD2"))
    STATUS=RBO.setProperty('','SLT_SLIT_AMT',OCONV(SLT.SLIT.AMT,"MD2"))
      IF SAVE.CUTS # SLT_SLIT_CUTS THEN
         SLT.LOG.SLIT.QTY= SLT.LOG.SLIT.QTY-(SAVE.CST.QTY+0)+SLT.SLIT.CST.QTY
         SLT.LOG.SLIT.AMT = SLT.LOG.SLIT.AMT - (SAVE.AMT+0) + SLT.SLIT.AMT
STATUS=RBO.setProperty('','testProp1',"TEST:":SLT.LOG.TRIM.QTY:"&&":SAVE.CST.QTY:"&&": SLT.SLIT.CST.QTY)
         SLT.LOG.TRIM.QTY = SLT.LOG.TRIM.QTY + (SAVE.CST.QTY+0) - SLT.SLIT.CST.QTY
         SLT.LOG.TRIM.AMT = SLT.LOG.TRIM.AMT + (SAVE.AMT+0) - SLT.SLIT.AMT

        *GOSUB BUILD.PARENT.LINE
	  GOSUB	BUILD.CHILD.LINES
         ***LINES = DCOUNT(SLT.SLIT.PROD,VM)
      END
*STATUS=RBO.setProperty('','testProp1',"TEST:":SLT.LOG.TRIM.QTY)

      IF SLT.LOG.TRIM.QTY < 0 THEN
         ERRMSG='Slit quantity total is greater than parent product quantity.'
         GOSUB 93000 ; ERR=1
      END
   *END
   RETURN
**************************************************************************

***************
ENT.CHILD.PROD:
***************

      IF NOT(ERR) THEN
        INV.ID=CONO:SLT_SLIT_PROD
        IWH.ID=CONO:SLT.LOG.PROD:"!":SLT.LOG.WHSE
        MATREAD INV.REC FROM INVENTORY, INV.ID THEN
        *    EOI2=1
        END ELSE
            MATREAD SAVE.INV.REC FROM INVENTORY,INV.ID ELSE NULL
            MATREAD SAVE.IWH.REC FROM INV.WHSE,IWH.ID ELSE NULL
            SAVE.IWH.REC(4) = SLT.LOG.UN.PRICE
           * CALL SLIT.INV.PAP.MAINT(CONO,INV.ID[4,99],MAT SAVE.INV.REC,MAT SAVE.IWH.REC)
            * GOSUB BUILD.PARENT.LINE
            * GOSUB BUILD.CHILD.LINES
           * END
           END
	STATUS = RBO.setProperty('','WHSE_LOC',INV.WHSE.CODE<1,1>)
	GOTO CALC.SLIT.AMT
 	GOTO BUILD.CHILD.LINES
*RETURN

*STATUS = RBO.setProperty('','testProp',"INV.M.WT =^^^=== ":INV.M.WT: " LOG.M.WT ": LOG.M.WT)

        IF INV.M.WT > LOG.M.WT THEN
          ERRMST="M.WEIGHT OF A LOG CANNOT BE LESS THEN M.WEIGHT OF A SLIT."
	   MY_ERRMSG="M.WEIGHT OF A LOG CANNOT BE LESS THEN M.WEIGHT OF A SLIT."
          ERR=1
        END
      END

RETURN

******************   
BUILD.CHILD.LINES: 
******************
  SLT_SLIT_STK_UOM =SLT.SLIT.STK.UOM<1,1>
  SLT_SLIT_CST_UOM=SLT.SLIT.CST.UOM<1,1>
  SLT_SLIT_CUTS=SLT.SLIT.CUTS
*STATUS = RBO.setProperty('','xy',"SLT_SLIT_CUTS =^^^=== ":SLT_SLIT_CUTS)
  *SLT_SLIT_WHSE=SLT.SLIT.WHSE
  SLT_SLIT_LOC=SLT.SLIT.LOC
  SLT_SLIT_CST_QTY='';SLT_SLIT_AMT=''

    TMP.QTY = OCONV(ICONV(SLT.SLIT.STK.QTY,"MD2"),"MD2")
    SLT_SLIT_STK_QTY=TMP.QTY
    TMP.QTY=OCONV((SLT.SLIT.CST.QTY/10),"MD2")
    SLT_SLIT_CST_QTY=TMP.QTY
    SLT_SLIT_AMT=SLT.SLIT.AMT

*********************Added after R & D**************
SLT_LOG_SLIT_QTY = OCONV(SLT.LOG.SLIT.QTY/10,"MD2")
SLT_LOG_SLIT_AMT = SLT.LOG.SLIT.AMT

SLT_LOG_TRIM_QTY = OCONV(SLT.LOG.TRIM.QTY/10,"MD2")
SLT_LOG_TRIM_AMT = SLT.LOG.TRIM.AMT


STATUS=RBO.setProperty('','SLT_LOG_SLIT_QTY',SLT_LOG_SLIT_QTY)
STATUS=RBO.setProperty('','SLT_LOG_SLIT_AMT',SLT_LOG_SLIT_AMT/100)
STATUS=RBO.setProperty('','SLT_LOG_TRIM_QTY',SLT_LOG_TRIM_QTY)
STATUS=RBO.setProperty('','SLT_LOG_TRIM_AMT',SLT_LOG_TRIM_AMT/100)


