SUBROUTINE getEstimateGroupsGrd
********************************************************************************
*   Program name :- getEstimateGroupsGrd

*   Created:- 6/27/2003

*   Author Irfan M Saleem
*

*  this method gets the grid rows in deptsummary
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE JES.CPYLIB JES.FILE.VARS
$INCLUDE JES.CPYLIB ESTIMATE.GRP
$INCLUDE CPYLIB FILE.VARS

*
*---- OPEN ALL FILES
*
   IN_PARAM = "" ; OUT_PARAM = ""
   ERRMSG = "CALL openEstimateFiles PROBLEM"
   CALL openEstimateFiles(ERRMSG,IN_PARAM,OUT_PARAM,MAT FILE.VARS,MAT JES.FILE.VARS)
   IF ERRMSG # "" THEN GOTO 93000
*
*---- INITIALIZATION
*
 EST.GRP.GRD = ''

 ERRMSG = RBO.getProperty('','EST_GRP',EST.GRP)

      MATREAD ESTG.REC FROM ESTIMATE.GRP, EST.GRP THEN
         EST.GRP.GRD = EST.GRP.GRD :ESTG.TYPE:"~":ESTG.CCTR:"~":ESTG.OPER:"~":ESTG.OPER.DESC:"~":ESTG.OPER.QPARAM:"~":ESTG.OPER.FPARAM
      END ELSE
          EST.GRP.GRD = '' 
      END
 
STATUS = RBO.setProperty('','EST_GRP',EST.GRP.GRD)

93000 *
   STATUS = RBO.setProperty('','ServerStatus',1)
   STATUS = RBO.setProperty('','ServerMessage',ERRMSG)
   RETURN

