SUBROUTINE ARCRM_GET_JOB_DIV
********************************************************************************
*   Program name :- ARCRM_GET_JOB_DIV
*   Created:- 7/30/2003
*------------------------------------------------------------------------------*
*

* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE JCS.CPYLIB JOB
* Insert method code here
ERRMSG = ""

OPEN "","JOB" TO JOB ELSE
	ERRMSG = "CANNOT OPEN JOB FILE"
       GOTO 99999
END

VAL = RBO.getProperty('','CUST_JOB',CUST.JOB)
VAL = RBO.getProperty('','Cono',CONO)
VAL = RBO.getProperty('','ID',ID) ;* CUST.NO
FLAG = ""
MATREAD JOB.REC FROM JOB,CONO:CUST.JOB ELSE 
	FLAG = "O"
	ERRMSG = "JOB " : CUST.JOB : " NOT ON FILE. OK TO USE?"
	GOTO 99999
END

IF JOB.CUST #  ID THEN
	FLAG = "E"
	ERRMSG = "Job number (" : CUST.JOB : ") is not for this customer."
	GOTO 99999
END

STATUS = RBO.setProperty('','DIV_CODE',JOB.DIV)

99999
IF TRIM(ERRMSG) # "" THEN
	STATUS = RBO.setProperty('','ServerStatus',FLAG)
	STATUS = RBO.setProperty('','ServerMessage',ERRMSG)
END ELSE
	STATUS = RBO.setProperty('','ServerStatus','')
	STATUS = RBO.setProperty('','ServerMessage','')
END
* End of method code
RETURN

