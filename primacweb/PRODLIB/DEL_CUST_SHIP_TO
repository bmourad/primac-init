SUBROUTINE DEL_CUST_SHIP_TO
********************************************************************************
*   Program name :- DEL_CUST_SHIP_TO
*   Created:- 12/06/2006
*   Programmer :- Suhail Hussain S
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE PMC.CPYLIB SHIP.TO

OPEN "SHIP.TO" TO SHIP.TO ELSE ERRMSG = "SHIP.TO FILE IS MISSING"; GOTO 91000

STATUS = RBO.getProperty('','PMCProperty',PMCProperty)
STATUS = RBO.getProperty('','ID',CUST.KEY)
STATUS = RBO.getProperty('','SHPNO',CUST.SHIP.TO)

CONO = PMCProperty<1,4>

* Insert method code here
   IF CUST.SHIP.TO # "" THEN
      TREC=''
      FOR I = 1 TO CUST.SHIP.TO
         READU TREC FROM SHIP.TO, CONO:CUST.KEY:"!":I 'R%3' THEN
            DELETE SHIP.TO, CONO:CUST.KEY:"!":I 'R%3'
         END ELSE RELEASE SHIP.TO, CONO:CUST.KEY:"!":I 'R%3'
      NEXT I
   END
RETURN

91000*
   STATUS = RBO.setProperty('','ServerStatus',1)
   STATUS = RBO.setProperty('','ServerMessage',ERRMSG)
RETURN

