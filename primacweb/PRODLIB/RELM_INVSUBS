SUBROUTINE RELM_INVSUBS
********************************************************************************
*   Program name :- RELM_INVSUBS
*   Created:- 1/1/2004 RAZI MOHIUDDIN
*------------------------------------------------------------------------------*
*

* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE ICS.CPYLIB INVENTORY
$INCLUDE CPYLIB CHAR

* Insert method code here
ERRMSG = ''
OPEN 'INVENTORY' TO INVENTORY ELSE
      ERRMSG='CANNOT OPEN INVENTORY FILE'
      GOTO 1000
END

ID = ''
CONO=''
STATUS = RBO.getProperty('','ID',ID)
STATUS = RBO.getProperty('','OSD_PROD',OSD_PROD)

CONO = ID[1,3]
ID = ID[4,99]
INVSUBS=''


MATREAD INV.REC FROM INVENTORY,CONO:OSD_PROD THEN
	INVSUBS=INV.SUBS	
END

STATUS = RBO.setProperty('','INV_SUBS',INVSUBS)

1000*
   IF ERRMSG # "" THEN
      STATUS = RBO.setProperty('','ServerStatus', 1)
      STATUS = RBO.setProperty('','ServerMessage', ERRMSG)            
   END


* End of method code
RETURN

