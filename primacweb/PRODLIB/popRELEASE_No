SUBROUTINE popRELEASE_No
********************************************************************************
*   Program name :- popRELEASE_No
*   Author:- MOHAMMED ABDUL MALIK
*   Created:- 11/12/2003
*------------------------------------------------------------------------------*
*

* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE OPS.CPYLIB ORDER.RELEASE

$INCLUDE CPYLIB CHAR
* Insert method code here

  OPEN "","ORDER.RELEASE" TO ORDER.RELEASE ELSE
    ERRMSG = "CANNOT OPEN ORDER.RELEASE FILE"
  END

ORDER.RELEASE.ID = ""
ORDER.RELEASE.LIST = ""
STATUS=RBO.getProperty('','PMCProperty',PMCProperty)

CONO=PMCProperty<1,4>


CMD = "SSELECT ORDER.RELEASE WITH CONO = '" : CONO : "'"
UDTEXECUTE CMD

LOOP
	EOF = 1
	READNEXT ORDER.RELEASE.ID ELSE EOF = 0
WHILE EOF DO
		MATREAD ORR.REC FROM ORDER.RELEASE,ORDER.RELEASE.ID THEN 		
				ORDER.RELEASE.LIST<1,-1> = ORDER.RELEASE.ID[4,99]
		END
REPEAT



STATUS = RBO.setProperty('', 'RELEASECodes', ORDER.RELEASE.LIST)


* End of method code
RETURN

