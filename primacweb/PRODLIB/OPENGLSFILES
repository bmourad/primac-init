   SUBROUTINE OPENGLSFILES(ERRMSG,IN_PARAM,OUT_PARAM,MAT FILE.VARS,MAT COA.FILE.VARS,GLH,GLHX)
*********************************************************************
*
* REVISION - [12.0]
*
* PROGRAM  - GET.GLS.OPEN
*
* AUTHOR   - CHRIS MYKLEBUST, PRIMAC SYSTEMS
*
* DATE     - 10/08/2002
*
* DESCRIPTION
*
* This program opens all of the files needed for entering an estimate.
*
*********************************************************************
*
*---- FILE COPY STATEMENTS
*
   $INCLUDE WWINSERT RBO.H
   $INCLUDE PMC.CPYLIB COA.FILE.VARS
   $INCLUDE CPYLIB FILE.VARS
   $INCLUDE CPYLIB CHAR
*
*---- OPEN ALL FILES
*
   ERRMSG = ""
   IF FILEINFO(COMPANY,0) = 0 THEN
      OPEN '','COMPANY' TO COMPANY ELSE
         ERRMSG = 'Cannot open COMPANY file!'
         RETURN
      END
   END
   IF FILEINFO(CONTROL,0) = 0 THEN
      OPEN '','CONTROL' TO CONTROL ELSE
         ERRMSG = 'Cannot open CONTROL file!'
         RETURN
      END
   END
   IF FILEINFO(PREFIX,0) = 0 THEN
      OPEN '','PREFIX' TO PREFIX ELSE
         ERRMSG = 'Cannot open PREFIX file!'
         RETURN
      END
   END
   IF FILEINFO(GLHX,0) = 0 THEN
      OPEN '','GLHX' TO GLHX ELSE
         ERRMSG = 'Cannot open GLHX file!'
         RETURN
      END
   END
   IF FILEINFO(GLH,0) = 0 THEN
      OPEN '','GLH' TO GLH ELSE
         ERRMSG = 'Cannot open GLH file!'
         RETURN
      END
   END
   IF FILEINFO(COA,0) = 0 THEN
      OPEN '','COA' TO COA ELSE
         ERRMSG = 'Cannot open COA file!'
         RETURN
      END
   END
   IF FILEINFO(COA.XREF,0) = 0 THEN
      OPEN '','COA.XREF' TO COA.XREF ELSE
         ERRMSG = 'Cannot open COA.XREF file!'
         RETURN
      END
   END
   IF FILEINFO(DIVISION,0) = 0 THEN
      OPEN '','DIVISION' TO DIVISION ELSE
         ERRMSG = 'Cannot open DIVISION file!'
         RETURN
      END
   END
   IF FILEINFO(DEPARTMENT,0) = 0 THEN
      OPEN '','DEPARTMENT' TO DEPARTMENT ELSE
         ERRMSG = 'Cannot open DEPARTMENT file!'
         RETURN
      END
   END
   IF FILEINFO(COST.CNTR,0) = 0 THEN
      OPEN '','COST.CNTR' TO COST.CNTR ELSE
         ERRMSG = 'Cannot open COST.CNTR file!'
         RETURN
      END
   END
   IF FILEINFO(ACCT.TYPE,0) = 0 THEN
      OPEN '','ACCT.TYPE' TO ACCT.TYPE ELSE
         ERRMSG = 'Cannot open ACCT.TYPE file!'
         RETURN
      END
   END
   IF FILEINFO(ACCT.CATG,0) = 0 THEN
      OPEN '','ACCT.CATG' TO ACCT.CATG ELSE
         ERRMSG = 'Cannot open ACCT.CATG file!'
         RETURN
      END
   END
   IF FILEINFO(ACCT.SUB.CATG,0) = 0 THEN
      OPEN '','ACCT.SUB.CATG' TO ACCT.SUB.CATG ELSE
         ERRMSG = 'Cannot open ACCT.SUB.CATG file!'
         RETURN
      END
   END
   IF FILEINFO(CATG.AND.SUB,0) = 0 THEN
      OPEN '','CATG.AND.SUB' TO CATG.AND.SUB ELSE
         ERRMSG = 'Cannot open CATG.AND.SUB file!'
         RETURN
      END
   END
   RETURN

