SUBROUTINE AVOUM_VALIDATE
********************************************************************************
*   Program name :- AVOUM_VALIDATE
*   Created:- 7/2/2003  by RaziMohiuddin
*------------------------------------------------------------------------------*
* In Properties:
* --------------
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE APS.CPYLIB AUTO.VOUCHERS 

ERRMSG=''

OPEN '','AUTO.VOUCHERS' TO AUTO.VOUCHERS ELSE
   ERRMSG='Cannot open AUTOVOUCHER file!'
   GOTO 1000
END

STATUS = RBO.getProperty('','ID',ID)


MAT AVO.REC = ''
MATREAD AVO.REC FROM AUTO.VOUCHERS, ID ELSE
	ERRMSG = ID :"  IS NOT ON FILE TRY AGAIN !"
	
GOTO 1000
END     


1000
STATUS = RBO.setProperty('','ServerStatus',1)        
STATUS = RBO.setProperty('','ServerMessage',ERRMSG)

* End of method code
RETURN

