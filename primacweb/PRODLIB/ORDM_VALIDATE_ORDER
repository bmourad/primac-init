SUBROUTINE ORDM_VALIDATE_ORDER
********************************************************************************
*   Program name :- ORDM_VALIDATE_ORDER
*   Created:- 4/7/2006
*   Programmer :- Suhail Hussain S
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE OPS.CPYLIB ORDER
   OPEN "","ORDER" TO ORDER ELSE ERRMSG = "CANNOT OPEN ORDER FILE";GOTO 91000   
   STATUS = RBO.getProperty("","ID",ORDNO)
   STATUS = RBO.getProperty("","PMCProperty",PMCProperty)   
   CONO = PMCProperty<1,4> 
   MATREAD ORD.REC FROM ORDER, CONO:ORDNO ELSE ERRMSG = "Cannot locate order no : " : ORDNO;GOTO 91000
RETURN
* End of method code
91000*
   STATUS = RBO.setProperty("","ServerStatus",1)
   STATUS = RBO.setProperty("","ServerMessage",ERRMSG)
RETURN

