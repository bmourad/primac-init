  SUBROUTINE GetInvOpenFiles(ERRMSG,IN_PARAM,OUT_PARAM,MAT FILE.VARS)
*********************************************************************
*
* REVISION - [12.0]
*
* PROGRAM  - GetInvOpenFiles
*
* AUTHOR   - ALEJANDRO DELGAD
*
* DATE     - 11/19/2002
*
* DESCRIPTION
*
* This program opens all of the files needed for inquiring a product.
*
*********************************************************************
*
*---- FILE COPY STATEMENTS
*
  $INCLUDE WWINSERT RBO.H
  $INCLUDE CPYLIB FILE.VARS
  $INCLUDE CPYLIB CHAR
  $INCLUDE CPYLIB SYSCOM
*
*---- OPEN ALL FILES
*
  LOCATE 'INVENTORY' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INVENTORY,0) = 0 THEN
      OPEN '','INVENTORY' TO INVENTORY ELSE
        ERRMSG = 'Cannot open INVENTORY file!'
        RETURN
      END
    END
  END
  LOCATE 'PO' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(PO,0) = 0 THEN
      OPEN '','PO' TO PO ELSE
        ERRMSG = 'Cannot open PO file!'
        RETURN
      END
    END
  END
  LOCATE 'INV.STATS' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV.STATS,0) = 0 THEN
      OPEN '','INV.STATS' TO INV.STATS ELSE
        ERRMSG = 'Cannot open INV.STATS file!'
        RETURN
      END
    END
  END
  LOCATE 'FNGD.STATS' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(FNGD.STATS,0) = 0 THEN
      OPEN '','FNGD.STATS' TO FNGD.STATS ELSE
        ERRMSG = 'Cannot open FNGD.STATS file!'
        RETURN
      END
    END
  END
  LOCATE 'FNGD.ORDER.STATS' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(FNGD.ORDER.STATS,0) = 0 THEN
      OPEN '','FNGD.ORDER.STATS' TO FNGD.ORDER.STATS ELSE
        ERRMSG = 'Cannot open FNGD.ORDER.STATS file!'
        RETURN
      END
    END
  END
  LOCATE 'FNGD.JOB.STATS' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(FNGD.JOB.STATS,0) = 0 THEN
      OPEN '','FNGD.JOB.STATS' TO FNGD.JOB.STATS ELSE
        ERRMSG = 'Cannot open FNGD.JOB.STATS file!'
        RETURN
      END
    END
  END
  LOCATE 'INV.JOB.STATS' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV.JOB.STATS,0) = 0 THEN
      OPEN '','INV.JOB.STATS' TO INV.JOB.STATS ELSE
        ERRMSG = 'Cannot open INV.JOB.STATS file!'
        RETURN
      END
    END
  END
  LOCATE 'INV.WHSE.LOC' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV.WHSE.LOC,0) = 0 THEN
      OPEN '','INV.WHSE.LOC' TO INV.WHSE.LOC ELSE
        ERRMSG = 'Cannot open INV.WHSE.LOC file!'
        RETURN
      END
    END
  END
  LOCATE 'INV.WHSE' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV.WHSE,0) = 0 THEN
      OPEN '','INV.WHSE' TO INV.WHSE ELSE
        ERRMSG = 'Cannot open INV.WHSE file!'
        RETURN
      END
    END
  END
  LOCATE 'INV_SERIAL' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV_SERIAL,0) = 0 THEN
      OPEN '','INV_SERIAL' TO INV_SERIAL ELSE
        ERRMSG = 'Cannot open INV_SERIAL file!'
        RETURN
      END
    END
  END
  LOCATE 'INV_RECEIPTS' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV_RECEIPTS,0) = 0 THEN
      OPEN '','INV_RECEIPTS' TO INV_RECEIPTS ELSE
        ERRMSG = 'Cannot open INV_RECEIPTS file!'
        RETURN
      END
    END
  END
  LOCATE 'INV_RECP_WHSE' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV_RECP_WHSE,0) = 0 THEN
      OPEN '','INV_RECP_WHSE' TO INV_RECP_WHSE ELSE
        ERRMSG = 'Cannot open INV_RECP_WHSE file!'
        RETURN
      END
    END
  END
  LOCATE 'INV_AUDIT_HIST' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV_AUDIT_HIST,0) = 0 THEN
      OPEN '','INV_AUDIT_HIST' TO INV_AUDIT_HIST ELSE
        ERRMSG = 'Cannot open INV_AUDIT_HIST file!'
        RETURN
      END
    END
  END
  LOCATE 'INV_AUDIT_BAL' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV_AUDIT_BAL,0) = 0 THEN
      OPEN '','INV_AUDIT_BAL' TO INV_AUDIT_BAL ELSE
        ERRMSG = 'Cannot open INV_AUDIT_BAL file!'
        RETURN
      END
    END
  END
  LOCATE 'JOB' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(JOB,0) = 0 THEN
      OPEN '','JOB' TO JOB ELSE
        ERRMSG = 'Cannot open JOB file!'
        RETURN
      END
    END
  END
  LOCATE 'CATEGORY' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(CATEGORY,0) = 0 THEN
      OPEN '','CATEGORY' TO CATEGORY ELSE
        ERRMSG = 'Cannot open CATEGORY file!'
        RETURN
      END
    END
  END
  LOCATE 'CUSTOMER' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(CUSTOMER,0) = 0 THEN
      OPEN '','CUSTOMER' TO CUSTOMER ELSE
        ERRMSG = 'Cannot open CUSTOMER file!'
        RETURN
      END
    END
  END
  LOCATE 'CUSTOMER.XREF' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(CUSTOMER.XREF,0) = 0 THEN
      OPEN '','CUSTOMER.XREF' TO CUSTOMER.XREF ELSE
        ERRMSG = 'Cannot open CUSTOMER.XREF file!'
        RETURN
      END
    END
  END
  LOCATE 'VEND' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(VEND,0) = 0 THEN
      OPEN '','VEND' TO VEND ELSE
        ERRMSG = 'Cannot open VEND file!'
        RETURN
      END
    END
  END
  LOCATE 'COMPANY' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(COMPANY,0) = 0 THEN
      OPEN '','COMPANY' TO COMPANY ELSE
        ERRMSG = 'Cannot open COMPANY file!'
        RETURN
      END
    END
  END
  LOCATE 'CONTROL' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(CONTROL,0) = 0 THEN
      OPEN '','CONTROL' TO CONTROL ELSE
        ERRMSG = 'Cannot open CONTROL file!'
        RETURN
      END
    END
  END
  LOCATE 'INVENTORY.XREF' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INVENTORY.XREF,0) = 0 THEN
      OPEN '','INVENTORY.XREF' TO INVENTORY.XREF ELSE
        ERRMSG = 'Cannot open INVENTORY.XREF file!'
        RETURN
      END
    END
  END
  LOCATE 'COLOR' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(COLOR,0) = 0 THEN
      OPEN '','COLOR' TO COLOR ELSE
        ERRMSG = 'Cannot open COLOR file!'
        RETURN
      END
    END
  END
  LOCATE 'FINISH' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(FINISH,0) = 0 THEN
      OPEN '','FINISH' TO FINISH ELSE
        ERRMSG = 'Cannot open FINISH file!'
        RETURN
      END
    END
  END
  LOCATE 'ORDER' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(ORDER,0) = 0 THEN
      OPEN '','ORDER' TO ORDER ELSE
        ERRMSG = 'Cannot open ORDER file!'
        RETURN
      END
    END
  END
  LOCATE 'ORDER.DETAIL' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(ORDER.DETAIL,0) = 0 THEN
      OPEN '','ORDER.DETAIL' TO ORDER.DETAIL ELSE
        ERRMSG = 'Cannot open ORDER.DETAIL file!'
        RETURN
      END
    END
  END
  LOCATE 'BOL' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(BOL,0) = 0 THEN
      OPEN '','BOL' TO BOL ELSE
        ERRMSG = 'Cannot open BOL file!'
        RETURN
      END
    END
  END
  LOCATE 'SHIP.TO' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(SHIP.TO,0) = 0 THEN
      OPEN '','SHIP.TO' TO SHIP.TO ELSE
        ERRMSG = 'Cannot open SHIP.TO file!'
        RETURN
      END
    END
  END
  LOCATE 'SHIP.VIA' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(SHIP.VIA,0) = 0 THEN
      OPEN '','SHIP.VIA' TO SHIP.VIA ELSE
        ERRMSG = 'Cannot open SHIP.VIA file!'
        RETURN
      END
    END
  END
  LOCATE 'FOB' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(FOB,0) = 0 THEN
      OPEN '','FOB' TO FOB ELSE
        ERRMSG = 'Cannot open FOB file!'
        RETURN
      END
    END
  END
  LOCATE 'FNGD.BOM' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(FNGD.BOM,0) = 0 THEN
      OPEN '','FNGD.BOM' TO FNGD.BOM ELSE
        ERRMSG = 'Cannot open FNGD.BOM file!'
        RETURN
      END
    END
  END
  LOCATE 'WAREHOUSE' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(WAREHOUSE,0) = 0 THEN
      OPEN '','WAREHOUSE' TO WAREHOUSE ELSE
        ERRMSG = 'Cannot open WAREHOUSE file!'
        RETURN
      END
    END
  END
  LOCATE 'COUNTRY.CODE' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(COUNTRY.CODE,0) = 0 THEN
      OPEN '','COUNTRY.CODE' TO COUNTRY.CODE ELSE
        ERRMSG = 'Cannot open COUNTRY.CODE file!'
        RETURN
      END
    END
  END
  LOCATE 'INV.FNGD' IN IN_PARAM<1>,1 SETTING POS THEN
    IF FILEINFO(INV.FNGD,0) = 0 THEN
      OPEN '','INV.FNGD' TO INV.FNGD ELSE
        ERRMSG = 'Cannot open INV.FNGD file!'
        RETURN
      END
    END
  END
  RETURN


