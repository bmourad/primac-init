SUBROUTINE JCSRCLSM_Validate_ReclassifyReason
********************************************************************************
*   Program name :- JCSRCLSM_Validate_ReclassifyReason
*   Created:- 11/20/2006
*------------------------------------------------------------------------------*
*

* In Properties:
* --------------
*  
*
* Out Properties:
* ---------------
*  
********************************************************************************
$INCLUDE WWINSERT RBO.H
$INCLUDE ICS.CPYLIB INVENTORY
* Insert method code here

OPEN '','INVENTORY' TO INVENTORY ELSE
      ERRMSG = 'INVENTORY FILE IS MISSING'; GOTO 99999
END

STATUS = RBO.getProperty('','PMCProperty',PMCProperty)
STATUS = RBO.getProperty('','DRC_T_CUST',DRC.T.CUST)
STATUS = RBO.getProperty('','PROD_NO',PROD.NO)

CONO = PMCProperty<1,4>
ERRMSG = ''
 * IF DRC.T.TYPE="OS" OR DRC.T.TYPE="MT" THEN
            MATREAD INV.REC FROM INVENTORY,CONO:PROD.NO ELSE MAT INV.REC = ""
            IF INV.CUST # "" THEN
               IF "X":DRC.T.CUST # "X":INV.CUST THEN
		    ERRMSG="This inventory belongs to customer ":INV.CUST
		    GOTO 99999 
              END
            END
  *END

* End of method code
RETURN
99999 
  IF (TRIM(ERRMSG) # "") THEN
       STATUS = RBO.setProperty('','ServerStatus',1)
       STATUS = RBO.setProperty('','ServerMessage',ERRMSG)
	STATUS = RBO.setProperty('','INV_CUST',INV.CUST)
  END
* End of method code
RETURN


